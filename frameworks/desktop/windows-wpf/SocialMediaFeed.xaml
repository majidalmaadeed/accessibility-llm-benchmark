<Window x:Class="AccessibilityBenchmark.SocialMediaFeed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Media Feed" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Social Media Feed" FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox Name="FilterComboBox" Width="120" Margin="10,0" 
                             SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Following"/>
                        <ComboBoxItem Content="Trending"/>
                    </ComboBox>
                    <Button Name="NotificationsButton" Content="ðŸ””" Width="40" Height="40" 
                           Margin="10,0" Click="NotificationsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="Red" Width="12" Height="12" 
                                            HorizontalAlignment="Right" VerticalAlignment="Top" 
                                            Margin="0,-5,-5,0" Visibility="Collapsed" Name="NotificationBadge"/>
                                    <ContentPresenter/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Name="TrendingButton" Content="ðŸ“ˆ" Width="40" Height="40" 
                           Margin="5,0" Click="TrendingButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Create Post -->
        <Border Grid.Row="1" Background="White" Margin="20,10" Padding="15" 
               CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Ellipse Grid.Column="0" Width="40" Height="40" Fill="LightBlue" 
                        Margin="0,0,15,0"/>
                
                <TextBox Grid.Column="1" Name="CreatePostTextBox" Height="40" 
                        VerticalContentAlignment="Center" Padding="10,0" 
                        TextChanged="CreatePostTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="What's on your mind?" 
                                                              Foreground="Gray" FontSize="14" Margin="10,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="2" Name="CreatePostButton" Content="Post" Width="80" 
                       Height="35" Margin="15,0,0,0" Click="CreatePostButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Posts Feed -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,0">
            <StackPanel Name="PostsPanel">
                <!-- Posts will be added here programmatically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#E0E0E0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="PostCountText" Text="0 posts"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
