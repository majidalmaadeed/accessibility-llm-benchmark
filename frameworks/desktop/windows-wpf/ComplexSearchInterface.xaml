<Window x:Class="AccessibilityBenchmark.ComplexSearchInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Search Interface" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="Advanced Search" FontSize="24" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Name="SearchTextBox" Grid.Column="0" Height="35" FontSize="16" 
                    TextChanged="SearchTextBox_TextChanged" 
                    VerticalContentAlignment="Center" Padding="10,0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Search for files, documents, images..." 
                                                          Foreground="Gray" FontSize="16" Margin="10,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Trigger>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <Button Name="SearchButton" Grid.Column="1" Content="ðŸ”" Width="40" Height="35" 
                   Margin="10,0" Click="SearchButton_Click"/>
            
            <Button Name="AdvancedSearchButton" Grid.Column="2" Content="Advanced" Width="80" Height="35" 
                   Margin="5,0" Click="AdvancedSearchButton_Click"/>
        </Grid>
        
        <!-- Filters -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" Margin="20,0">
            <StackPanel>
                <TextBlock Text="Filters" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Category Filter -->
                    <TextBlock Grid.Column="0" Text="Category:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="1" Name="CategoryComboBox" Width="120" Margin="0,0,20,0" 
                             SelectionChanged="CategoryComboBox_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Documents"/>
                        <ComboBoxItem Content="Images"/>
                        <ComboBoxItem Content="Videos"/>
                        <ComboBoxItem Content="Audio"/>
                        <ComboBoxItem Content="Archives"/>
                    </ComboBox>
                    
                    <!-- Sort Filter -->
                    <TextBlock Grid.Column="2" Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="3" Name="SortComboBox" Width="120" Margin="0,0,20,0" 
                             SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Relevance" IsSelected="True"/>
                        <ComboBoxItem Content="Date"/>
                        <ComboBoxItem Content="Name"/>
                        <ComboBoxItem Content="Size"/>
                        <ComboBoxItem Content="Type"/>
                        <ComboBoxItem Content="Rating"/>
                    </ComboBox>
                    
                    <!-- View Mode -->
                    <TextBlock Grid.Column="4" Text="View:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="5" Name="ViewModeComboBox" Width="100" 
                             SelectionChanged="ViewModeComboBox_SelectionChanged">
                        <ComboBoxItem Content="List" IsSelected="True"/>
                        <ComboBoxItem Content="Grid"/>
                        <ComboBoxItem Content="Compact"/>
                    </ComboBox>
                    
                    <Button Grid.Column="6" Name="ClearFiltersButton" Content="Clear All" Width="80" 
                           Margin="20,0,0,0" Click="ClearFiltersButton_Click"/>
                </Grid>
                
                <!-- Quick Filters -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Quick Filters:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Name="RecentFilterButton" Content="Recent" Width="60" Height="25" 
                           Margin="2" Click="RecentFilterButton_Click"/>
                    <Button Name="LargeFilesFilterButton" Content="Large Files" Width="80" Height="25" 
                           Margin="2" Click="LargeFilesFilterButton_Click"/>
                    <Button Name="ImagesFilterButton" Content="Images Only" Width="90" Height="25" 
                           Margin="2" Click="ImagesFilterButton_Click"/>
                    <Button Name="VideosFilterButton" Content="Videos Only" Width="90" Height="25" 
                           Margin="2" Click="VideosFilterButton_Click"/>
                    <Button Name="FreeFilterButton" Content="Free" Width="50" Height="25" 
                           Margin="2" Click="FreeFilterButton_Click"/>
                    <Button Name="PremiumFilterButton" Content="Premium" Width="70" Height="25" 
                           Margin="2" Click="PremiumFilterButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Results -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Results Header -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="ResultsCountText" Text="0 results found" 
                          FontWeight="SemiBold" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Results per page:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Name="ResultsPerPageComboBox" Width="60" 
                             SelectionChanged="ResultsPerPageComboBox_SelectionChanged">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="25" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
            
            <!-- Results List -->
            <ListBox Grid.Row="1" Name="ResultsListBox" 
                    SelectionChanged="ResultsListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" Margin="0,2" Padding="15" CornerRadius="5" 
                               BorderBrush="LightGray" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="24" 
                                          VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <!-- Content -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" 
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" 
                                              Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Category}" FontSize="11" 
                                                  Foreground="Blue" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Date}" FontSize="11" 
                                                  Foreground="Gray" Margin="0,0,10,0"/>
                                        <TextBlock Text="â­" FontSize="11" Margin="0,0,2,0"/>
                                        <TextBlock Text="{Binding Rating}" FontSize="11" 
                                                  Foreground="Gray" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Size}" FontSize="11" 
                                                  Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Price/Actions -->
                                <StackPanel Grid.Column="2" Orientation="Vertical" 
                                           HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding Price}" FontWeight="Bold" 
                                              FontSize="14" HorizontalAlignment="Right" 
                                              Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Name="PreviewButton" Content="ðŸ‘" Width="25" Height="25" 
                                               Margin="2" Click="PreviewButton_Click" Tag="{Binding}"/>
                                        <Button Name="DownloadButton" Content="â¬‡" Width="25" Height="25" 
                                               Margin="2" Click="DownloadButton_Click" Tag="{Binding}"/>
                                        <Button Name="BookmarkButton" Content="ðŸ”–" Width="25" Height="25" 
                                               Margin="2" Click="BookmarkButton_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Empty State -->
            <Grid Grid.Row="1" Name="EmptyStateGrid" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="No results found" FontSize="18" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Try adjusting your search terms or filters" FontSize="14" 
                              Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Pagination -->
        <Border Grid.Row="4" Background="#F5F5F5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="FirstPageButton" Content="â®" Width="30" Height="30" 
                           Margin="2" Click="FirstPageButton_Click"/>
                    <Button Name="PreviousPageButton" Content="â—€" Width="30" Height="30" 
                           Margin="2" Click="PreviousPageButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Name="PageInfoText" Text="Page 1 of 1" VerticalAlignment="Center" 
                              Margin="20,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" 
                           HorizontalAlignment="Right">
                    <Button Name="NextPageButton" Content="â–¶" Width="30" Height="30" 
                           Margin="2" Click="NextPageButton_Click"/>
                    <Button Name="LastPageButton" Content="â­" Width="30" Height="30" 
                           Margin="2" Click="LastPageButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="5" Background="#E0E0E0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Name="LoadingProgressBar" Width="100" Height="16" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
