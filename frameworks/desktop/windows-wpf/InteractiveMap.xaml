<Window x:Class="AccessibilityBenchmark.InteractiveMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interactive Map" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Interactive Map" FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox Name="MapTypeComboBox" Width="120" Margin="10,0" 
                             SelectionChanged="MapTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Standard" IsSelected="True"/>
                        <ComboBoxItem Content="Satellite"/>
                        <ComboBoxItem Content="Hybrid"/>
                        <ComboBoxItem Content="Terrain"/>
                    </ComboBox>
                    <Button Name="LayersButton" Content="Layers" Width="80" Margin="10,0" 
                           Click="LayersButton_Click"/>
                    <Button Name="BookmarksButton" Content="Bookmarks" Width="80" Margin="10,0" 
                           Click="BookmarksButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Name="SearchTextBox" Grid.Column="0" Height="35" FontSize="16" 
                    TextChanged="SearchTextBox_TextChanged" 
                    VerticalContentAlignment="Center" Padding="10,0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Search for places, addresses, or businesses..." 
                                                          Foreground="Gray" FontSize="16" Margin="10,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <Button Name="SearchButton" Grid.Column="1" Content="🔍" Width="40" Height="35" 
                   Margin="10,0" Click="SearchButton_Click"/>
            
            <Button Name="MyLocationButton" Grid.Column="2" Content="📍" Width="40" Height="35" 
                   Margin="5,0" Click="MyLocationButton_Click"/>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Map Area -->
            <Border Grid.Column="0" Background="LightBlue" BorderBrush="Gray" BorderThickness="1" 
                   CornerRadius="5" Margin="0,0,10,0">
                <Grid Name="MapGrid">
                    <!-- Map Background -->
                    <Rectangle Fill="LightGreen" RadiusX="5" RadiusY="5"/>
                    
                    <!-- Map Content -->
                    <Canvas Name="MapCanvas" ClipToBounds="True">
                        <!-- Map markers will be added here programmatically -->
                    </Canvas>
                    
                    <!-- Map Controls -->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
                        <Button Name="ZoomInButton" Content="+" Width="30" Height="30" 
                               Margin="0,2" Click="ZoomInButton_Click"/>
                        <Button Name="ZoomOutButton" Content="-" Width="30" Height="30" 
                               Margin="0,2" Click="ZoomOutButton_Click"/>
                        <Button Name="CenterButton" Content="⌂" Width="30" Height="30" 
                               Margin="0,2" Click="CenterButton_Click"/>
                    </StackPanel>
                    
                    <!-- Map Info -->
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                               Background="White" Opacity="0.8" Margin="10" Padding="10">
                        <TextBlock Name="MapInfoText" Text="🗺️ Standard Map&#x0a;37.7749, -122.4194&#x0a;Zoom: 10" 
                                  FontSize="12" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Side Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Search Results -->
                <Border Grid.Row="0" Background="White" Margin="0,0,0,10" Padding="10" 
                       CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Search Results" FontWeight="Bold" FontSize="14" 
                                  Margin="0,0,0,10"/>
                        <ListBox Name="SearchResultsListBox" Height="150" 
                                SelectionChanged="SearchResultsListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding Address}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Category}" FontSize="10" Foreground="Blue"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Location Details -->
                <Border Grid.Row="1" Background="White" Margin="0,0,0,10" Padding="10" 
                       CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Location Details" FontWeight="Bold" FontSize="14" 
                                  Margin="0,0,0,10"/>
                        <ScrollViewer Name="LocationDetailsScrollViewer" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="LocationDetailsPanel">
                                <TextBlock Text="Select a location to view details" 
                                          FontStyle="Italic" Foreground="Gray"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions -->
                <Border Grid.Row="2" Background="White" Padding="10" CornerRadius="5" 
                       BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontWeight="Bold" FontSize="14" 
                                  Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0" Grid.Column="0" Name="GetDirectionsButton" 
                                   Content="Get Directions" Margin="2" Click="GetDirectionsButton_Click"/>
                            <Button Grid.Row="0" Grid.Column="1" Name="ShareLocationButton" 
                                   Content="Share" Margin="2" Click="ShareLocationButton_Click"/>
                            <Button Grid.Row="1" Grid.Column="0" Name="SaveLocationButton" 
                                   Content="Save" Margin="2" Click="SaveLocationButton_Click"/>
                            <Button Grid.Row="1" Grid.Column="1" Name="ReportIssueButton" 
                                   Content="Report" Margin="2" Click="ReportIssueButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#E0E0E0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="CoordinatesText" Text="Lat: 37.7749, Lng: -122.4194"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
