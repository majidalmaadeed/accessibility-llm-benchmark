<Window x:Class="AccessibilityApp.CustomDropdownNavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Dropdown Navigation - Accessibility Violation"
        Height="800" Width="900"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            
            <!-- Main Content Card -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="30" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    
                    <!-- Title -->
                    <TextBlock Text="Product Filter - Custom Dropdown Accessibility Violation"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,16" />
                    
                    <!-- Description -->
                    <TextBlock Text="Violation: Custom dropdown lacks proper keyboard navigation, ARIA attributes, and screen reader support."
                               FontSize="16" 
                               Foreground="#666666"
                               Margin="0,0,0,30" />
                    
                    <!-- Filter Section -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Filter by Category:"
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,8" />
                        
                        <!-- Custom Dropdown -->
                        <Grid Width="200" Height="44">
                            <Button x:Name="DropdownButton"
                                    Content="{Binding SelectedText}"
                                    Background="#F8F9FA"
                                    Foreground="#333333"
                                    FontSize="16"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Click="OnDropdownButtonClicked">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="{TemplateBinding CornerRadius}">
                                            <Grid>
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}" />
                                                <TextBlock Text="▼" 
                                                           HorizontalAlignment="Right" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,16,0"
                                                           Foreground="#666666" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- Dropdown List -->
                            <ListBox x:Name="DropdownList"
                                     Background="White"
                                     BorderBrush="#007BFF"
                                     BorderThickness="2"
                                     Margin="0,44,0,0"
                                     Visibility="Collapsed"
                                     SelectionChanged="OnOptionSelected">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Text}"
                                                       FontSize="16"
                                                       Foreground="#333333"
                                                       VerticalAlignment="Center"
                                                       Margin="16,12" />
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="✓"
                                                       FontSize="16"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,16,0"
                                                       Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="#007BFF" />
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F8F9FA" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Results Section -->
                    <StackPanel>
                        <TextBlock Text="Filtered Results"
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,16" />
                        
                        <ItemsControl ItemsSource="{Binding FilteredProducts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Margin="8"
                                            Padding="20">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#333333"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,8" />
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
            <!-- Accessibility Info Card -->
            <Border Background="#E9ECEF" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    
                    <TextBlock Text="Accessibility Issues:"
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,12" />
                    
                    <TextBlock FontSize="14" 
                               Foreground="#333333"
                               Margin="0,0,0,12">
                        <Run Text="• Incomplete keyboard navigation: Arrow keys don't navigate through options" />
                        <LineBreak />
                        <Run Text="• Missing ARIA attributes: No aria-activedescendant or proper role attributes" />
                        <LineBreak />
                        <Run Text="• Focus management: Focus doesn't move to options when dropdown opens" />
                        <LineBreak />
                        <Run Text="• Screen reader announcements: No announcements when selection changes" />
                        <LineBreak />
                        <Run Text="• Escape key handling: Escape doesn't close dropdown" />
                        <LineBreak />
                        <Run Text="• Tab order: Options are not in proper tab sequence" />
                    </TextBlock>
                    
                    <TextBlock Text="How to Fix:"
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,12" />
                    
                    <TextBlock FontSize="14" 
                               Foreground="#333333">
                        <Run Text="• Add aria-activedescendant to track focused option" />
                        <LineBreak />
                        <Run Text="• Implement arrow key navigation (Up/Down)" />
                        <LineBreak />
                        <Run Text="• Add aria-selected to indicate selected state" />
                        <LineBreak />
                        <Run Text="• Handle Escape key to close dropdown" />
                        <LineBreak />
                        <Run Text="• Add aria-live region for selection announcements" />
                        <LineBreak />
                        <Run Text="• Ensure proper focus management when opening/closing" />
                    </TextBlock>
                    
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          BlurRadius="10" 
                          ShadowDepth="2" 
                          Opacity="0.1" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
</Window>