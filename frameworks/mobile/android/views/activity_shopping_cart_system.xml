<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping Cart System - Accessibility Violation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violation: Shopping cart lacks proper accessibility attributes, form validation, and screen reader support."
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp" />

    <!-- Cart Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/itemCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 items in cart"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <Button
            android:id="@+id/clearCartButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Clear Cart"
            android:textSize="12sp"
            android:backgroundTint="#FF5722" />

    </LinearLayout>

    <!-- Cart Items List -->
    <ListView
        android:id="@+id/cartItemsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp" />

    <!-- Promo Code Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/promoCodeInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Enter promo code"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/applyPromoButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Apply"
            android:textSize="12sp"
            android:enabled="false" />

    </LinearLayout>

    <!-- Shipping Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Method"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/shippingSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Order Summary -->
    <LinearLayout
        android:id="@+id/summaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/subtotalText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal: $217.96"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/taxText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tax: $17.44"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/shippingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shipping: $5.99"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: $241.39"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

    <!-- Checkout Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Proceed to Checkout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Accessibility Issues Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accessibility Issues:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Missing cart item descriptions: Product information not accessible to screen readers\n• Inaccessible quantity controls: Quantity buttons lack proper labels\n• Missing price calculations: Price updates not announced to screen readers\n• Inaccessible promo code input: Promo code field lacks proper context\n• Missing form validation announcements: Error messages not properly announced\n• Inaccessible shipping selection: Shipping options not properly described\n• Missing order summary context: Summary information not properly structured\n• Poor keyboard navigation: Cart controls not accessible via keyboard\n• Missing item removal confirmation: Remove buttons lack proper context\n• Inaccessible checkout process: Checkout button lacks proper description"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Fix:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Add comprehensive product descriptions for all cart items\n• Ensure quantity controls have proper labels and context\n• Implement live regions for price calculation announcements\n• Add proper context for promo code input field\n• Implement proper form validation with accessibility announcements\n• Ensure shipping options are properly described\n• Structure order summary with proper headings and context\n• Implement keyboard navigation for all cart controls\n• Add confirmation context for item removal actions\n• Ensure checkout button has proper accessibility description"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
