<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multi-Step Registration - Accessibility Violation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violation: Multi-step form lacks proper accessibility attributes, step navigation, and screen reader support."
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp" />

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="20"
            android:max="100"
            android:progressTint="#4CAF50" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1 of 5"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Step Indicator -->
    <LinearLayout
        android:id="@+id/stepContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <!-- Step 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="1"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#4CAF50"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="10sp"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

        <!-- Step 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="2"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#E0E0E0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="10sp"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

        <!-- Step 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="3"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#E0E0E0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textSize="10sp"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

        <!-- Step 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="4"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#E0E0E0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="10sp"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

        <!-- Step 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="5"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#E0E0E0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textSize="10sp"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Step Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Step Title and Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F8F9FA">

                <TextView
                    android:id="@+id/stepTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/stepDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tell us about yourself"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Form Container -->
            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

    <!-- Navigation -->
    <LinearLayout
        android:id="@+id/navigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textSize="14sp"
            android:enabled="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Submit"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Accessibility Issues Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accessibility Issues:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Missing step navigation: No proper way to navigate between steps with screen readers\n• Inaccessible progress indicator: Progress bar not announced to screen readers\n• Missing form validation announcements: Error messages not properly announced\n• Poor keyboard navigation: Tab order not optimized for multi-step forms\n• Missing step context: Screen readers don't know which step they're on\n• Inaccessible form controls: Input fields lack proper labels and descriptions\n• Missing completion status: No indication of form completion progress\n• Poor error handling: Validation errors not properly associated with fields\n• Missing step summary: No way to review previous steps\n• Inaccessible navigation buttons: Previous/Next buttons lack proper context"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Fix:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Add proper step navigation with android:contentDescription\n• Implement live regions for progress announcements\n• Add proper form validation with accessibility announcements\n• Optimize tab order for multi-step form navigation\n• Add step context information for screen readers\n• Ensure all form controls have proper labels\n• Add completion status announcements\n• Associate error messages with form fields\n• Implement step summary functionality\n• Add descriptive content for navigation buttons"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
