<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Player Full Interface - Accessibility Violation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="16dp"
        android:background="#333333" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violation: Media player lacks proper accessibility attributes, keyboard navigation, and screen reader support."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:padding="12dp"
        android:background="#333333" />

    <!-- Video Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000">

        <!-- Video View -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#000000" />

        <!-- Video Info Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#80000000"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Video 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/videoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A sample video for testing"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Controls Overlay -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#80000000"
            android:layout_alignParentBottom="true">

            <!-- Progress Bar -->
            <SeekBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:progressTint="#FF0000"
                android:thumbTint="#FF0000" />

            <!-- Time Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/currentTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:00"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Control Buttons Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/playPauseButton"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Play"
                    android:textSize="12sp"
                    android:backgroundTint="#FF0000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/playlistButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Playlist"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/captionsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Captions"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/fullscreenButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Fullscreen"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Control Buttons Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume:"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/volumeBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/volumeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Control Buttons Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed:"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/speedSpinner"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/qualitySpinner"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Playlist Container -->
    <LinearLayout
        android:id="@+id/playlistContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="#444444" />

        <ListView
            android:id="@+id/playlistView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#333333"
            android:divider="#555555"
            android:dividerHeight="1dp" />

    </LinearLayout>

    <!-- Accessibility Issues Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accessibility Issues:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Missing media controls labels: Play/pause buttons lack descriptive text\n• Inaccessible progress bar: Seek bar not properly labeled for screen readers\n• Missing volume control descriptions: Volume slider lacks proper context\n• Inaccessible speed controls: Speed selection not properly labeled\n• Missing quality descriptions: Quality selector lacks proper context\n• Inaccessible playlist: Playlist items not properly described\n• Missing captions support: Caption button functionality not accessible\n• Poor keyboard navigation: Media controls not accessible via keyboard\n• Missing media descriptions: Video content not described to screen readers\n• Inaccessible fullscreen toggle: Fullscreen button lacks proper description"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Fix:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Add descriptive content descriptions for all media controls\n• Implement proper seek bar accessibility with android:contentDescription\n• Add volume control context and current value announcements\n• Ensure speed controls have proper labels and descriptions\n• Add quality selector descriptions and current selection context\n• Implement accessible playlist with proper item descriptions\n• Add proper captions support with accessibility announcements\n• Implement keyboard navigation for all media controls\n• Add comprehensive media content descriptions\n• Ensure fullscreen toggle has proper accessibility context"
                android:textSize="12sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
