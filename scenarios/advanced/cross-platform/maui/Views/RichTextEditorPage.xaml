<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityBenchmark.Views.RichTextEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Rich Text Editor">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <Label Text="Rich Text Editor" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <StackLayout Spacing="10">
                    
                    <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto" ColumnSpacing="5">
                        <Button Grid.Column="0" Text="B" FontAttributes="Bold" Clicked="OnBoldClicked" />
                        <Button Grid.Column="1" Text="I" FontAttributes="Italic" Clicked="OnItalicClicked" />
                        <Button Grid.Column="2" Text="U" FontAttributes="Underline" Clicked="OnUnderlineClicked" />
                        <Button Grid.Column="3" Text="A" Clicked="OnAlignLeftClicked" />
                        <Button Grid.Column="4" Text="A" Clicked="OnAlignCenterClicked" />
                    </Grid>
                    
                    <Editor x:Name="TextEditor" 
                            HeightRequest="300" 
                            Placeholder="Enter your text here..." />
                    
                    <Button Text="Save" Clicked="OnSaveClicked" />
                    
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
