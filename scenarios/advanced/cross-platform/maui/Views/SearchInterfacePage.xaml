<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityBenchmark.Views.SearchInterfacePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Complex Search Interface">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <Label Text="Complex Search Interface" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <StackLayout Spacing="10">
                    
                    <Entry x:Name="SearchEntry" 
                           Placeholder="Search for anything..." 
                           TextChanged="OnSearchTextChanged" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="10">
                        <Picker Grid.Row="0" Grid.Column="0" x:Name="CategoryPicker" Title="Category">
                            <Picker.Items>
                                <x:String>All</x:String>
                                <x:String>Documents</x:String>
                                <x:String>Images</x:String>
                                <x:String>Videos</x:String>
                                <x:String>Audio</x:String>
                            </Picker.Items>
                        </Picker>
                        
                        <Picker Grid.Row="0" Grid.Column="1" x:Name="TypePicker" Title="Type">
                            <Picker.Items>
                                <x:String>All</x:String>
                                <x:String>Recent</x:String>
                                <x:String>Popular</x:String>
                                <x:String>Featured</x:String>
                            </Picker.Items>
                        </Picker>
                    </Grid>
                    
                    <Button Text="Search" Clicked="OnSearchClicked" />
                    
                    <ListView x:Name="SearchResultsListView" HeightRequest="300">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10" ColumnDefinitions="*,*" RowDefinitions="Auto">
                                        <Label Grid.Column="0" Text="{Binding Title}" FontSize="14" />
                                        <Label Grid.Column="1" Text="{Binding Category}" FontSize="14" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
