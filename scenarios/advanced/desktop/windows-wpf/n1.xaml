<Window x:Class="UIComponents.CalendarApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendar Application" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Calendar" FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button Name="PreviousButton" Content="◀" Width="40" Height="40" 
                           Margin="5" Click="PreviousButton_Click"/>
                    <Button Name="NextButton" Content="▶" Width="40" Height="40" 
                           Margin="5" Click="NextButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ComboBox Name="ViewModeComboBox" Width="120" Margin="10,0" 
                             SelectionChanged="ViewModeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Month" IsSelected="True"/>
                        <ComboBoxItem Content="Week"/>
                        <ComboBoxItem Content="Day"/>
                    </ComboBox>
                    <Button Name="CreateEventButton" Content="+ New Event" Width="100" 
                           Margin="10,0" Click="CreateEventButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Date Label -->
        <TextBlock Grid.Row="1" Name="DateLabel" Text="January 2024" FontSize="18" 
                  FontWeight="SemiBold" Margin="20,10" HorizontalAlignment="Center"/>
        
        <!-- Calendar Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Month View -->
            <Grid Name="MonthView" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Day Headers -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Sun" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Mon" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Tue" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Wed" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Thu" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Fri" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="Sat" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Grid>
                
                <!-- Calendar Grid -->
                <UniformGrid Name="CalendarGrid" Grid.Row="1" Columns="7" Rows="6"/>
            </Grid>
            
            <!-- Week View -->
            <Grid Name="WeekView" Grid.Row="1" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Sun" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay0" Text="1" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents0" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Mon" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay1" Text="2" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents1" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Tue" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay2" Text="3" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents2" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Wed" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay3" Text="4" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents3" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Thu" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay4" Text="5" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents4" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="5" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Fri" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay5" Text="6" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents5" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="6" BorderBrush="LightGray" BorderThickness="1" Margin="1">
                    <StackPanel>
                        <TextBlock Text="Sat" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <TextBlock Name="WeekDay6" Text="7" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                        <ListBox Name="WeekEvents6" Height="200" Margin="5"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Day View -->
            <Grid Name="DayView" Grid.Row="1" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Name="DayDateLabel" Text="Monday, January 1, 2024" 
                          FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <ListBox Grid.Row="1" Name="DayEventsListBox" Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightBlue" Margin="2" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Time}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Location}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Name="LoadingProgressBar" Width="100" Height="16" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
