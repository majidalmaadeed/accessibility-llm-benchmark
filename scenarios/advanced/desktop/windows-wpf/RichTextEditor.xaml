<Window x:Class="AccessibilityBenchmark.RichTextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rich Text Editor" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F5F5F5">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="NewMenuItem_Click"/>
                <MenuItem Header="Open" Click="OpenMenuItem_Click"/>
                <MenuItem Header="Save" Click="SaveMenuItem_Click"/>
                <MenuItem Header="Save As" Click="SaveAsMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Export">
                    <MenuItem Header="PDF" Click="ExportPdfMenuItem_Click"/>
                    <MenuItem Header="Word Document" Click="ExportWordMenuItem_Click"/>
                    <MenuItem Header="HTML" Click="ExportHtmlMenuItem_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" Click="UndoMenuItem_Click"/>
                <MenuItem Header="Redo" Click="RedoMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Cut" Click="CutMenuItem_Click"/>
                <MenuItem Header="Copy" Click="CopyMenuItem_Click"/>
                <MenuItem Header="Paste" Click="PasteMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Format">
                <MenuItem Header="Font" Click="FontMenuItem_Click"/>
                <MenuItem Header="Paragraph" Click="ParagraphMenuItem_Click"/>
                <MenuItem Header="Styles" Click="StylesMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Insert">
                <MenuItem Header="Image" Click="InsertImageMenuItem_Click"/>
                <MenuItem Header="Table" Click="InsertTableMenuItem_Click"/>
                <MenuItem Header="Link" Click="InsertLinkMenuItem_Click"/>
                <MenuItem Header="List" Click="InsertListMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Word Count" Click="WordCountMenuItem_Click"/>
                <MenuItem Header="Zoom In" Click="ZoomInMenuItem_Click"/>
                <MenuItem Header="Zoom Out" Click="ZoomOutMenuItem_Click"/>
                <MenuItem Header="Reset Zoom" Click="ResetZoomMenuItem_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBarTray Grid.Row="1" Background="#E0E0E0">
            <ToolBar>
                <!-- Undo/Redo -->
                <Button Name="UndoButton" Content="↶" Width="30" Height="30" 
                       Click="UndoButton_Click" ToolTip="Undo"/>
                <Button Name="RedoButton" Content="↷" Width="30" Height="30" 
                       Click="RedoButton_Click" ToolTip="Redo"/>
                
                <Separator/>
                
                <!-- Formatting -->
                <Button Name="BoldButton" Content="B" FontWeight="Bold" Width="30" Height="30" 
                       Click="BoldButton_Click" ToolTip="Bold"/>
                <Button Name="ItalicButton" Content="I" FontStyle="Italic" Width="30" Height="30" 
                       Click="ItalicButton_Click" ToolTip="Italic"/>
                <Button Name="UnderlineButton" Content="U" TextDecorations="Underline" Width="30" Height="30" 
                       Click="UnderlineButton_Click" ToolTip="Underline"/>
                
                <Separator/>
                
                <!-- Font Size -->
                <ComboBox Name="FontSizeComboBox" Width="60" Height="30" 
                         SelectionChanged="FontSizeComboBox_SelectionChanged" ToolTip="Font Size">
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16" IsSelected="True"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="24"/>
                    <ComboBoxItem Content="28"/>
                    <ComboBoxItem Content="32"/>
                    <ComboBoxItem Content="36"/>
                    <ComboBoxItem Content="48"/>
                    <ComboBoxItem Content="72"/>
                </ComboBox>
                
                <!-- Font Family -->
                <ComboBox Name="FontFamilyComboBox" Width="120" Height="30" 
                         SelectionChanged="FontFamilyComboBox_SelectionChanged" ToolTip="Font Family">
                    <ComboBoxItem Content="Arial" IsSelected="True"/>
                    <ComboBoxItem Content="Calibri"/>
                    <ComboBoxItem Content="Times New Roman"/>
                    <ComboBoxItem Content="Courier New"/>
                    <ComboBoxItem Content="Georgia"/>
                    <ComboBoxItem Content="Verdana"/>
                    <ComboBoxItem Content="Tahoma"/>
                </ComboBox>
                
                <Separator/>
                
                <!-- Text Color -->
                <Button Name="TextColorButton" Content="A" Width="30" Height="30" 
                       Click="TextColorButton_Click" ToolTip="Text Color"/>
                
                <!-- Background Color -->
                <Button Name="BackgroundColorButton" Content="🖍" Width="30" Height="30" 
                       Click="BackgroundColorButton_Click" ToolTip="Background Color"/>
                
                <Separator/>
                
                <!-- Alignment -->
                <Button Name="LeftAlignButton" Content="⬅" Width="30" Height="30" 
                       Click="LeftAlignButton_Click" ToolTip="Align Left"/>
                <Button Name="CenterAlignButton" Content="⬆" Width="30" Height="30" 
                       Click="CenterAlignButton_Click" ToolTip="Align Center"/>
                <Button Name="RightAlignButton" Content="➡" Width="30" Height="30" 
                       Click="RightAlignButton_Click" ToolTip="Align Right"/>
                <Button Name="JustifyButton" Content="⬌" Width="30" Height="30" 
                       Click="JustifyButton_Click" ToolTip="Justify"/>
                
                <Separator/>
                
                <!-- Lists -->
                <Button Name="BulletListButton" Content="•" Width="30" Height="30" 
                       Click="BulletListButton_Click" ToolTip="Bullet List"/>
                <Button Name="NumberedListButton" Content="1." Width="30" Height="30" 
                       Click="NumberedListButton_Click" ToolTip="Numbered List"/>
                
                <Separator/>
                
                <!-- Insert -->
                <Button Name="InsertImageButton" Content="🖼" Width="30" Height="30" 
                       Click="InsertImageButton_Click" ToolTip="Insert Image"/>
                <Button Name="InsertTableButton" Content="⊞" Width="30" Height="30" 
                       Click="InsertTableButton_Click" ToolTip="Insert Table"/>
                <Button Name="InsertLinkButton" Content="🔗" Width="30" Height="30" 
                       Click="InsertLinkButton_Click" ToolTip="Insert Link"/>
            </ToolBar>
        </ToolBarTray>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Rich Text Editor -->
            <RichTextBox Name="RichTextBox" Grid.Column="0" Margin="10" 
                        TextChanged="RichTextBox_TextChanged" 
                        SelectionChanged="RichTextBox_SelectionChanged"
                        AcceptsReturn="True" AcceptsTab="True"
                        VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            
            <!-- Side Panel -->
            <Grid Grid.Column="1" Width="200" Background="#F8F8F8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Word Count -->
                <Border Grid.Row="0" Background="White" Margin="5" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Document Statistics" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Name="WordCountText" Text="Words: 0"/>
                        <TextBlock Name="CharacterCountText" Text="Characters: 0"/>
                        <TextBlock Name="ParagraphCountText" Text="Paragraphs: 0"/>
                    </StackPanel>
                </Border>
                
                <!-- Styles -->
                <Border Grid.Row="1" Background="White" Margin="5" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Quick Styles" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Button Name="Heading1Button" Content="Heading 1" Margin="0,2" 
                               Click="Heading1Button_Click"/>
                        <Button Name="Heading2Button" Content="Heading 2" Margin="0,2" 
                               Click="Heading2Button_Click"/>
                        <Button Name="Heading3Button" Content="Heading 3" Margin="0,2" 
                               Click="Heading3Button_Click"/>
                        <Button Name="NormalButton" Content="Normal" Margin="0,2" 
                               Click="NormalButton_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- Recent Files -->
                <Border Grid.Row="2" Background="White" Margin="5" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Recent Files" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox Name="RecentFilesListBox" Height="150" 
                                SelectionChanged="RecentFilesListBox_SelectionChanged">
                            <ListBoxItem Content="Document1.docx"/>
                            <ListBoxItem Content="Report.docx"/>
                            <ListBoxItem Content="Notes.docx"/>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Zoom Control -->
                <Border Grid.Row="3" Background="White" Margin="5" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Zoom" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Name="ZoomText" Text="100%" 
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button Grid.Column="1" Name="ZoomOutButton" Content="-" Width="25" Height="25" 
                                   Click="ZoomOutButton_Click" Margin="2"/>
                            <Button Grid.Column="2" Name="ZoomInButton" Content="+" Width="25" Height="25" 
                                   Click="ZoomInButton_Click" Margin="2"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="PositionText" Text="Line 1, Column 1"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
