<ContentDialog x:Class="AccessibilityBenchmark.CreateEventDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Create Event"
               PrimaryButtonText="Save"
               SecondaryButtonText="Cancel"
               DefaultButton="Primary">

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="0,8">
            <!-- Event Title -->
            <StackPanel>
                <TextBlock Text="Title" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Name="TitleTextBox" PlaceholderText="Enter event title"/>
            </StackPanel>
            
            <!-- Description -->
            <StackPanel>
                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Name="DescriptionTextBox" PlaceholderText="Enter event description" 
                        AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>
            </StackPanel>
            
            <!-- Start Date/Time -->
            <StackPanel>
                <TextBlock Text="Start Date & Time" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <DatePicker Grid.Column="0" Name="StartDatePicker" Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="1" Text="at" VerticalAlignment="Center" Margin="8,0"/>
                    <ComboBox Grid.Column="2" Name="StartTimeComboBox" Margin="8,0,0,0">
                        <ComboBoxItem Content="12:00 AM" IsSelected="True"/>
                        <ComboBoxItem Content="1:00 AM"/>
                        <ComboBoxItem Content="2:00 AM"/>
                        <ComboBoxItem Content="3:00 AM"/>
                        <ComboBoxItem Content="4:00 AM"/>
                        <ComboBoxItem Content="5:00 AM"/>
                        <ComboBoxItem Content="6:00 AM"/>
                        <ComboBoxItem Content="7:00 AM"/>
                        <ComboBoxItem Content="8:00 AM"/>
                        <ComboBoxItem Content="9:00 AM"/>
                        <ComboBoxItem Content="10:00 AM"/>
                        <ComboBoxItem Content="11:00 AM"/>
                        <ComboBoxItem Content="12:00 PM"/>
                        <ComboBoxItem Content="1:00 PM"/>
                        <ComboBoxItem Content="2:00 PM"/>
                        <ComboBoxItem Content="3:00 PM"/>
                        <ComboBoxItem Content="4:00 PM"/>
                        <ComboBoxItem Content="5:00 PM"/>
                        <ComboBoxItem Content="6:00 PM"/>
                        <ComboBoxItem Content="7:00 PM"/>
                        <ComboBoxItem Content="8:00 PM"/>
                        <ComboBoxItem Content="9:00 PM"/>
                        <ComboBoxItem Content="10:00 PM"/>
                        <ComboBoxItem Content="11:00 PM"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            
            <!-- End Date/Time -->
            <StackPanel>
                <TextBlock Text="End Date & Time" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <DatePicker Grid.Column="0" Name="EndDatePicker" Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="1" Text="at" VerticalAlignment="Center" Margin="8,0"/>
                    <ComboBox Grid.Column="2" Name="EndTimeComboBox" Margin="8,0,0,0">
                        <ComboBoxItem Content="12:00 AM"/>
                        <ComboBoxItem Content="1:00 AM"/>
                        <ComboBoxItem Content="2:00 AM"/>
                        <ComboBoxItem Content="3:00 AM"/>
                        <ComboBoxItem Content="4:00 AM"/>
                        <ComboBoxItem Content="5:00 AM"/>
                        <ComboBoxItem Content="6:00 AM"/>
                        <ComboBoxItem Content="7:00 AM"/>
                        <ComboBoxItem Content="8:00 AM"/>
                        <ComboBoxItem Content="9:00 AM"/>
                        <ComboBoxItem Content="10:00 AM"/>
                        <ComboBoxItem Content="11:00 AM"/>
                        <ComboBoxItem Content="12:00 PM"/>
                        <ComboBoxItem Content="1:00 PM"/>
                        <ComboBoxItem Content="2:00 PM"/>
                        <ComboBoxItem Content="3:00 PM"/>
                        <ComboBoxItem Content="4:00 PM"/>
                        <ComboBoxItem Content="5:00 PM"/>
                        <ComboBoxItem Content="6:00 PM"/>
                        <ComboBoxItem Content="7:00 PM"/>
                        <ComboBoxItem Content="8:00 PM"/>
                        <ComboBoxItem Content="9:00 PM"/>
                        <ComboBoxItem Content="10:00 PM"/>
                        <ComboBoxItem Content="11:00 PM" IsSelected="True"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            
            <!-- Category -->
            <StackPanel>
                <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <ComboBox Name="CategoryComboBox">
                    <ComboBoxItem Content="personal" IsSelected="True"/>
                    <ComboBoxItem Content="work"/>
                    <ComboBoxItem Content="meeting"/>
                    <ComboBoxItem Content="appointment"/>
                    <ComboBoxItem Content="reminder"/>
                </ComboBox>
            </StackPanel>
            
            <!-- Location -->
            <StackPanel>
                <TextBlock Text="Location" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Name="LocationTextBox" PlaceholderText="Enter location"/>
            </StackPanel>
            
            <!-- All Day Checkbox -->
            <CheckBox Name="AllDayCheckBox" Content="All Day Event"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
