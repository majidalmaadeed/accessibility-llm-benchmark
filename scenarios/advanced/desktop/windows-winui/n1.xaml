<Page x:Class="UIComponents.CalendarApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource SystemAccentColor}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Calendar" FontSize="28" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button Name="PreviousButton" Content="◀" Width="40" Height="40" 
                           Margin="8" Click="PreviousButton_Click"/>
                    <Button Name="NextButton" Content="▶" Width="40" Height="40" 
                           Margin="8" Click="NextButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ComboBox Name="ViewModeComboBox" Width="140" Margin="12,0" 
                             SelectionChanged="ViewModeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Month" IsSelected="True"/>
                        <ComboBoxItem Content="Week"/>
                        <ComboBoxItem Content="Day"/>
                    </ComboBox>
                    <Button Name="CreateEventButton" Content="+ New Event" Width="120" 
                           Margin="12,0" Click="CreateEventButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Date Label -->
        <TextBlock Grid.Row="1" Name="DateLabel" Text="January 2024" FontSize="20" 
                  FontWeight="SemiBold" Margin="24,16" HorizontalAlignment="Center"/>
        
        <!-- Calendar Content -->
        <Grid Grid.Row="2" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Month View -->
            <Grid Name="MonthView" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Day Headers -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Sun" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Mon" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Tue" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Wed" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Thu" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Fri" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="Sat" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Grid>
                
                <!-- Calendar Grid -->
                <UniformGrid Name="CalendarGrid" Grid.Row="1" Columns="7" Rows="6"/>
            </Grid>
            
            <!-- Week View -->
            <Grid Name="WeekView" Grid.Row="1" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Sun" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay0" Text="1" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents0" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Mon" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay1" Text="2" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents1" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Tue" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay2" Text="3" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents2" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Wed" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay3" Text="4" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents3" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Thu" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay4" Text="5" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents4" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="5" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Fri" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay5" Text="6" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents5" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="6" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Sat" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
                        <TextBlock Name="WeekDay6" Text="7" FontSize="18" HorizontalAlignment="Center" Margin="8"/>
                        <ListView Name="WeekEvents6" Height="200" Margin="8"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Day View -->
            <Grid Name="DayView" Grid.Row="1" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Name="DayDateLabel" Text="Monday, January 1, 2024" 
                          FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                
                <ListView Grid.Row="1" Name="DayEventsListBox" Margin="0,12,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                   Margin="4" Padding="16" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Time}" FontSize="14" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{Binding Location}" FontSize="14" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
            <Grid Padding="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusText" Text="Ready" VerticalAlignment="Center"/>
                
                <ProgressBar Grid.Column="1" Name="LoadingProgressBar" Width="120" Height="16" 
                            Visibility="Collapsed" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
