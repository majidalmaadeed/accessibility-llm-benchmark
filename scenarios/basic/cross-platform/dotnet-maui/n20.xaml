<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessibilityScenarios.UnlabeledMediaButton"
             Title="Media Player">
    
    <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="0">
        <!-- Header -->
        <Border Grid.Row="0" BackgroundColor="#FFFFFF" Padding="20">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="Media Player"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       VerticalOptions="Center"/>
                
                <HorizontalStackLayout Grid.Column="1" Spacing="15">
                    <Button Text="🎵 Library"
                            BackgroundColor="#007bff"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="6"
                            FontSize="16"
                            FontAttributes="Bold"/>
                    
                    <Button Text="⚙️ Settings"
                            BackgroundColor="#6c757d"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="6"
                            FontSize="16"
                            FontAttributes="Bold"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>
        
        <!-- Video Placeholder -->
        <Border Grid.Row="1" BackgroundColor="#667eea" Margin="0" Padding="40">
            <Grid>
                <Label Text="Sample Video&#x0a;This is a sample video for demonstration purposes"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Media Controls -->
        <Border Grid.Row="2" BackgroundColor="#212529" Padding="20">
            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                <!-- Play/Pause Button Group -->
                <HorizontalStackLayout Grid.Column="0" Spacing="15" VerticalOptions="Center">
                    <!-- UNLABELED MEDIA BUTTON - Video play button using only emoji icon without accessible name -->
                    <Button Text="▶️"
                            BackgroundColor="#007bff"
                            TextColor="White"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="25"
                            FontSize="24"
                            FontAttributes="Bold"/>
                    
                    <Label Text="0:00 / 3:00"
                           FontFamily="Courier New"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           Padding="10,0"/>
                </HorizontalStackLayout>
                
                <!-- Additional Controls -->
                <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                    <Button Text="⏪"
                            BackgroundColor="#343a40"
                            TextColor="White"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="4"
                            FontSize="20"/>
                    
                    <Button Text="⏩"
                            BackgroundColor="#343a40"
                            TextColor="White"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="4"
                            FontSize="20"/>
                    
                    <Button Text="⏮️"
                            BackgroundColor="#343a40"
                            TextColor="White"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="4"
                            FontSize="20"/>
                    
                    <Button Text="⏭️"
                            BackgroundColor="#343a40"
                            TextColor="White"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="4"
                            FontSize="20"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>
        
        <!-- Progress Slider -->
        <Slider Grid.Row="3"
                Minimum="0"
                Maximum="180"
                Value="0"
                BackgroundColor="#343a40"
                ThumbColor="#007bff"
                MinimumTrackColor="#007bff"
                MaximumTrackColor="#6c757d"
                Margin="20,10"/>
    </Grid>
</ContentPage>
