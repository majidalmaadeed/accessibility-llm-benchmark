<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.RightClickOnlyMenu"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="File Manager">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Toolbar -->
                <Frame BackgroundColor="White" 
                       CornerRadius="0" 
                       Padding="16" 
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Button Text="📁" 
                                FontSize="16" 
                                BackgroundColor="LightBlue" 
                                TextColor="Blue" 
                                WidthRequest="40" 
                                HeightRequest="40" 
                                CornerRadius="20" 
                                Clicked="OnNewFolderClicked" />
                        <Button Text="📄" 
                                FontSize="16" 
                                BackgroundColor="LightGreen" 
                                TextColor="Green" 
                                WidthRequest="40" 
                                HeightRequest="40" 
                                CornerRadius="20" 
                                Clicked="OnNewFileClicked" />
                        <Button Text="📤" 
                                FontSize="16" 
                                BackgroundColor="LightOrange" 
                                TextColor="Orange" 
                                WidthRequest="40" 
                                HeightRequest="40" 
                                CornerRadius="20" 
                                Clicked="OnUploadClicked" />
                        <Button Text="🔍" 
                                FontSize="16" 
                                BackgroundColor="LightGray" 
                                TextColor="Gray" 
                                WidthRequest="40" 
                                HeightRequest="40" 
                                CornerRadius="20" 
                                Clicked="OnSearchClicked" />
                    </StackLayout>
                </Frame>
                
                <!-- Breadcrumb Navigation -->
                <Frame BackgroundColor="LightGray" 
                       CornerRadius="0" 
                       Padding="16" 
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal" Spacing="8">
                        <Label Text="📁" FontSize="16" />
                        <Label Text="Home" FontSize="14" FontAttributes="Bold" />
                        <Label Text=">" FontSize="14" TextColor="Gray" />
                        <Label Text="Documents" FontSize="14" FontAttributes="Bold" />
                        <Label Text=">" FontSize="14" TextColor="Gray" />
                        <Label Text="Projects" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </Frame>
                
                <!-- File List -->
                <CollectionView ItemsSource="{Binding Files}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   CornerRadius="0" 
                                   Padding="16" 
                                   Margin="0,0,0,1"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- File Icon -->
                                    <Frame Grid.Column="0" 
                                           BackgroundColor="{Binding IconColor}" 
                                           CornerRadius="8" 
                                           Padding="8" 
                                           WidthRequest="40" 
                                           HeightRequest="40"
                                           HasShadow="False">
                                        <Label Text="{Binding Icon}" 
                                               FontSize="20" 
                                               HorizontalTextAlignment="Center" 
                                               VerticalTextAlignment="Center" />
                                    </Frame>
                                    
                                    <!-- File Info -->
                                    <StackLayout Grid.Column="1" 
                                                 Margin="12,0,0,0">
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Size}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding LastModified}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                    
                                    <!-- File Type -->
                                    <Label Grid.Column="2" 
                                           Text="{Binding Type}" 
                                           FontSize="12" 
                                           TextColor="Gray" 
                                           VerticalOptions="Center" 
                                           Margin="0,0,12,0" />
                                    
                                    <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via long press -->
                                    <Button Grid.Column="3" 
                                            Text="⋯" 
                                            FontSize="20" 
                                            BackgroundColor="Transparent" 
                                            TextColor="Gray" 
                                            WidthRequest="32" 
                                            HeightRequest="32" 
                                            CornerRadius="16" 
                                            Clicked="OnMoreOptionsClicked" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Context Menu - RIGHT-CLICK ONLY MENU -->
                <Frame x:Name="ContextMenu" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="0" 
                       IsVisible="False"
                       HasShadow="True">
                    <StackLayout Spacing="0">
                        <Button Text="📂 Open" 
                                BackgroundColor="Transparent" 
                                TextColor="Black" 
                                FontSize="14" 
                                Padding="16,12" 
                                HorizontalOptions="FillAndExpand" 
                                Clicked="OnOpenClicked" />
                        
                        <BoxView Color="LightGray" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand" />
                        
                        <Button Text="📋 Copy" 
                                BackgroundColor="Transparent" 
                                TextColor="Black" 
                                FontSize="14" 
                                Padding="16,12" 
                                HorizontalOptions="FillAndExpand" 
                                Clicked="OnCopyClicked" />
                        
                        <BoxView Color="LightGray" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand" />
                        
                        <Button Text="✏️ Rename" 
                                BackgroundColor="Transparent" 
                                TextColor="Black" 
                                FontSize="14" 
                                Padding="16,12" 
                                HorizontalOptions="FillAndExpand" 
                                Clicked="OnRenameClicked" />
                        
                        <BoxView Color="LightGray" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand" />
                        
                        <Button Text="📤 Share" 
                                BackgroundColor="Transparent" 
                                TextColor="Black" 
                                FontSize="14" 
                                Padding="16,12" 
                                HorizontalOptions="FillAndExpand" 
                                Clicked="OnShareClicked" />
                        
                        <BoxView Color="LightGray" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand" />
                        
                        <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via long press -->
                        <Button Text="🗑️ Delete" 
                                BackgroundColor="Transparent" 
                                TextColor="Red" 
                                FontSize="14" 
                                FontAttributes="Bold" 
                                Padding="16,12" 
                                HorizontalOptions="FillAndExpand" 
                                Clicked="OnDeleteClicked" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
