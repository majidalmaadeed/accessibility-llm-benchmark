<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.UngroupedRadioButtons"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Account Registration">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="24" Spacing="24">
                <!-- Step Indicator -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center" 
                             Spacing="8">
                    <Frame BackgroundColor="Blue" 
                           CornerRadius="16" 
                           Padding="8" 
                           WidthRequest="32" 
                           HeightRequest="32"
                           HasShadow="False">
                        <Label Text="1" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" />
                    </Frame>
                    <BoxView Color="Blue" 
                             HeightRequest="2" 
                             WidthRequest="50" 
                             VerticalOptions="Center" />
                    <Frame BackgroundColor="LightGray" 
                           CornerRadius="16" 
                           Padding="8" 
                           WidthRequest="32" 
                           HeightRequest="32"
                           HasShadow="False">
                        <Label Text="2" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="Gray" 
                               HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" />
                    </Frame>
                    <BoxView Color="LightGray" 
                             HeightRequest="2" 
                             WidthRequest="50" 
                             VerticalOptions="Center" />
                    <Frame BackgroundColor="LightGray" 
                           CornerRadius="16" 
                           Padding="8" 
                           WidthRequest="32" 
                           HeightRequest="32"
                           HasShadow="False">
                        <Label Text="3" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="Gray" 
                               HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" />
                    </Frame>
                </StackLayout>
                
                <!-- Form Content -->
                <StackLayout Spacing="24">
                    <Label Text="Personal Information" 
                           FontSize="20" 
                           FontAttributes="Bold" />
                    
                    <!-- First Name -->
                    <Entry Placeholder="First Name *" 
                           FontSize="16" />
                    
                    <!-- Last Name -->
                    <Entry Placeholder="Last Name *" 
                           FontSize="16" />
                    
                    <!-- Email -->
                    <Entry Placeholder="Email Address *" 
                           FontSize="16" 
                           Keyboard="Email" />
                    
                    <!-- Phone -->
                    <Entry Placeholder="Phone Number" 
                           FontSize="16" 
                           Keyboard="Telephone" />
                    
                    <!-- Contact Preferences - UNGROUPED RADIO BUTTONS -->
                    <StackLayout Spacing="16">
                        <Label Text="Contact Preferences" 
                               FontSize="18" 
                               FontAttributes="Bold" />
                        <Label Text="How would you like us to contact you? (Select all that apply)" 
                               FontSize="14" 
                               TextColor="Gray" />
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnEmailPreferenceClicked" />
                            <Label Text="Email notifications" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnSmsPreferenceClicked" />
                            <Label Text="SMS messages" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnPhonePreferenceClicked" />
                            <Label Text="Phone calls" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnPushPreferenceClicked" />
                            <Label Text="Push notifications" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                    
                    <!-- Newsletter Preferences - UNGROUPED RADIO BUTTONS -->
                    <StackLayout Spacing="16">
                        <Label Text="Newsletter Frequency" 
                               FontSize="18" 
                               FontAttributes="Bold" />
                        <Label Text="How often would you like to receive our newsletter?" 
                               FontSize="14" 
                               TextColor="Gray" />
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnDailyNewsletterClicked" />
                            <Label Text="Daily" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnWeeklyNewsletterClicked" />
                            <Label Text="Weekly" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnMonthlyNewsletterClicked" />
                            <Label Text="Monthly" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnNeverNewsletterClicked" />
                            <Label Text="Never" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                    
                    <!-- Account Type - UNGROUPED RADIO BUTTONS -->
                    <StackLayout Spacing="16">
                        <Label Text="Account Type" 
                               FontSize="18" 
                               FontAttributes="Bold" />
                        <Label Text="What type of account are you creating?" 
                               FontSize="14" 
                               TextColor="Gray" />
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnPersonalAccountClicked" />
                            <Label Text="Personal Account" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnBusinessAccountClicked" />
                            <Label Text="Business Account" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Button Text="☐" 
                                    FontSize="16" 
                                    BackgroundColor="Transparent" 
                                    TextColor="Gray" 
                                    BorderWidth="0" 
                                    WidthRequest="20" 
                                    HeightRequest="20" 
                                    Clicked="OnEnterpriseAccountClicked" />
                            <Label Text="Enterprise Account" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                
                <!-- Navigation Buttons -->
                <StackLayout Orientation="Horizontal" 
                             Spacing="16" 
                             Margin="0,32,0,0">
                    <Button Text="Previous" 
                            BackgroundColor="Transparent" 
                            TextColor="Gray" 
                            FontSize="16" 
                            Padding="24,12" 
                            BorderColor="Gray" 
                            BorderWidth="1" 
                            CornerRadius="8" 
                            HorizontalOptions="FillAndExpand" />
                    <Button Text="Next" 
                            BackgroundColor="Blue" 
                            TextColor="White" 
                            FontSize="16" 
                            Padding="24,12" 
                            CornerRadius="8" 
                            HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
