<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.UnlabeledMediaButton"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Video Player">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <!-- Video Player Section -->
                <Frame BackgroundColor="Black" CornerRadius="10" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="250" />
                        </Grid.RowDefinitions>
                        
                        <!-- Video Background/Thumbnail -->
                        <Image Source="https://via.placeholder.com/400x250"
                               Aspect="AspectFill"
                               Grid.Row="0" />
                        
                        <!-- Video Overlay -->
                        <BoxView Color="Black" Opacity="0.3" Grid.Row="0" />
                        
                        <!-- Play/Pause Button - UNLABELED MEDIA BUTTON -->
                        <Button Text="▶️"
                                FontSize="40"
                                BackgroundColor="Transparent"
                                BorderColor="Transparent"
                                TextColor="White"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Grid.Row="0"
                                Clicked="OnPlayPauseClicked"
                                // MISSING: No accessible name or label for screen readers
                                />
                        
                        <!-- Video Title Overlay -->
                        <Label Text="Flutter Development Tutorial"
                               TextColor="White"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               Margin="0,0,0,60"
                               Grid.Row="0" />
                        
                        <!-- Progress Bar -->
                        <StackLayout VerticalOptions="End" Margin="16,0,16,20" Grid.Row="0">
                            <ProgressBar x:Name="ProgressBar" 
                                        Progress="0.3" 
                                        ProgressColor="Red" />
                            <Grid Margin="0,8,0,0">
                                <Label Text="2:15" TextColor="White" FontSize="12" />
                                <Label Text="7:30" TextColor="White" FontSize="12" HorizontalOptions="End" />
                            </Grid>
                        </StackLayout>
                    </Grid>
                </Frame>
                
                <!-- Video Controls -->
                <Frame BackgroundColor="White" CornerRadius="10" Padding="16">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                        <!-- Previous Button -->
                        <Button Text="⏮️"
                                FontSize="24"
                                BackgroundColor="LightGray"
                                BorderColor="Transparent"
                                TextColor="Gray"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                Clicked="OnPreviousClicked"
                                // MISSING: No accessible name
                                />
                        
                        <!-- Play/Pause Button -->
                        <Button x:Name="PlayPauseButton"
                                Text="⏸️"
                                FontSize="28"
                                BackgroundColor="Blue"
                                BorderColor="Transparent"
                                TextColor="White"
                                WidthRequest="60"
                                HeightRequest="60"
                                CornerRadius="30"
                                Clicked="OnPlayPauseClicked"
                                // MISSING: No accessible name
                                />
                        
                        <!-- Next Button -->
                        <Button Text="⏭️"
                                FontSize="24"
                                BackgroundColor="LightGray"
                                BorderColor="Transparent"
                                TextColor="Gray"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                Clicked="OnNextClicked"
                                // MISSING: No accessible name
                                />
                        
                        <!-- Volume Button -->
                        <Button Text="🔊"
                                FontSize="24"
                                BackgroundColor="LightGray"
                                BorderColor="Transparent"
                                TextColor="Gray"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                Clicked="OnVolumeClicked"
                                // MISSING: No accessible name
                                />
                        
                        <!-- Fullscreen Button -->
                        <Button Text="⛶"
                                FontSize="24"
                                BackgroundColor="LightGray"
                                BorderColor="Transparent"
                                TextColor="Gray"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                Clicked="OnFullscreenClicked"
                                // MISSING: No accessible name
                                />
                    </StackLayout>
                </Frame>
                
                <!-- Video List -->
                <Label Text="Recommended Videos" FontSize="20" FontAttributes="Bold" />
                
                <CollectionView ItemsSource="{Binding Videos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Video Thumbnail -->
                                <Frame Grid.Column="0" 
                                       BackgroundColor="LightGray" 
                                       CornerRadius="8" 
                                       Padding="0"
                                       HeightRequest="80">
                                    <Grid>
                                        <Image Source="{Binding Thumbnail}" 
                                               Aspect="AspectFill" />
                                        
                                        <!-- Play Button Overlay -->
                                        <Button Text="▶️"
                                                FontSize="20"
                                                BackgroundColor="Transparent"
                                                BorderColor="Transparent"
                                                TextColor="White"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Clicked="OnVideoThumbnailClicked"
                                                // MISSING: No accessible name
                                                />
                                        
                                        <!-- Duration Badge -->
                                        <Frame BackgroundColor="Black" 
                                               Opacity="0.8" 
                                               CornerRadius="4" 
                                               Padding="6,2" 
                                               HorizontalOptions="End" 
                                               VerticalOptions="End" 
                                               Margin="0,0,8,8">
                                            <Label Text="{Binding Duration}" 
                                                   TextColor="White" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold" />
                                        </Frame>
                                    </Grid>
                                </Frame>
                                
                                <!-- Video Info -->
                                <StackLayout Grid.Column="1" Padding="12,0,0,0">
                                    <Label Text="{Binding Title}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           MaxLines="2" />
                                    <Label Text="{Binding Description}" 
                                           FontSize="14" 
                                           TextColor="Gray" 
                                           MaxLines="2" />
                                    <StackLayout Orientation="Horizontal" Spacing="16">
                                        <StackLayout Orientation="Horizontal" Spacing="4">
                                            <Label Text="👁️" FontSize="12" />
                                            <Label Text="{Binding Views}" FontSize="12" TextColor="Gray" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal" Spacing="4">
                                            <Label Text="⏱️" FontSize="12" />
                                            <Label Text="{Binding Duration}" FontSize="12" TextColor="Gray" />
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
