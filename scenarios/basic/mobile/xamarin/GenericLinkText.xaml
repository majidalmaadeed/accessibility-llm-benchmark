<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.GenericLinkText"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Tech Blog">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Featured Article -->
                <Frame BackgroundColor="White" 
                       CornerRadius="12" 
                       Padding="0" 
                       Margin="16" 
                       HasShadow="True">
                    <StackLayout>
                        <!-- Featured Image -->
                        <Image Source="https://via.placeholder.com/400x200" 
                               Aspect="AspectFill" 
                               HeightRequest="200" />
                        
                        <!-- Featured Content -->
                        <StackLayout Padding="20" Spacing="12">
                            <Frame BackgroundColor="LightBlue" 
                                   CornerRadius="12" 
                                   Padding="8,4" 
                                   HasShadow="False">
                                <Label Text="Featured" 
                                       FontSize="12" 
                                       FontAttributes="Bold" 
                                       TextColor="Blue" />
                            </Frame>
                            
                            <Label Text="Building Scalable React Native Applications" 
                                   FontSize="22" 
                                   FontAttributes="Bold" />
                            
                            <Label Text="Discover the key principles and patterns for creating maintainable and scalable React Native applications that can grow with your business needs." 
                                   FontSize="16" 
                                   TextColor="Gray" />
                            
                            <StackLayout Orientation="Horizontal" Spacing="16">
                                <Frame BackgroundColor="Blue" 
                                       CornerRadius="16" 
                                       Padding="8" 
                                       WidthRequest="32" 
                                       HeightRequest="32"
                                       HasShadow="False">
                                    <Label Text="AT" 
                                           FontSize="12" 
                                           FontAttributes="Bold" 
                                           TextColor="White" 
                                           HorizontalTextAlignment="Center" 
                                           VerticalTextAlignment="Center" />
                                </Frame>
                                <Label Text="Alex Thompson" 
                                       FontSize="14" 
                                       FontAttributes="Bold" />
                                <Label Text="January 20, 2024" 
                                       FontSize="12" 
                                       TextColor="Gray" />
                                <Label Text="12 min read" 
                                       FontSize="12" 
                                       TextColor="Gray" />
                            </StackLayout>
                            
                            <!-- GENERIC LINK TEXT - "Read more" without context -->
                            <Button Text="Read more" 
                                    BackgroundColor="Blue" 
                                    TextColor="White" 
                                    CornerRadius="8" 
                                    FontSize="16" 
                                    FontAttributes="Bold" 
                                    Padding="24,12"
                                    Clicked="OnReadMoreClicked" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
                <!-- Category Filter -->
                <ScrollView Orientation="Horizontal" 
                            BackgroundColor="White" 
                            Padding="16,8">
                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Button Text="All" 
                                BackgroundColor="Blue" 
                                TextColor="White" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Technology" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Design" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Business" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Science" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                    </StackLayout>
                </ScrollView>
                
                <!-- Articles List -->
                <StackLayout Padding="16" Spacing="16">
                    <CollectionView ItemsSource="{Binding Articles}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" 
                                       CornerRadius="12" 
                                       Padding="0" 
                                       Margin="0,0,0,16"
                                       HasShadow="True">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Article Image -->
                                        <Frame Grid.Column="0" 
                                               BackgroundColor="LightGray" 
                                               CornerRadius="12,0,0,12" 
                                               Padding="0"
                                               HasShadow="False">
                                            <Image Source="{Binding Image}" 
                                                   Aspect="AspectFill" />
                                        </Frame>
                                        
                                        <!-- Article Content -->
                                        <StackLayout Grid.Column="1" 
                                                     Padding="16" 
                                                     Spacing="8">
                                            <!-- Category and Read Time -->
                                            <StackLayout Orientation="Horizontal" Spacing="8">
                                                <Frame BackgroundColor="Blue" 
                                                       CornerRadius="4" 
                                                       Padding="6,2" 
                                                       HasShadow="False">
                                                    <Label Text="{Binding Category}" 
                                                           FontSize="10" 
                                                           FontAttributes="Bold" 
                                                           TextColor="White" />
                                                </Frame>
                                                <Label Text="{Binding ReadTime}" 
                                                       FontSize="10" 
                                                       TextColor="Gray" />
                                            </StackLayout>
                                            
                                            <!-- Article Title -->
                                            <Label Text="{Binding Title}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   MaxLines="2" />
                                            
                                            <!-- Article Excerpt -->
                                            <Label Text="{Binding Excerpt}" 
                                                   FontSize="12" 
                                                   TextColor="Gray" 
                                                   MaxLines="2" />
                                            
                                            <!-- Author and Date -->
                                            <StackLayout Orientation="Horizontal" Spacing="8">
                                                <Label Text="{Binding Author}" 
                                                       FontSize="10" 
                                                       TextColor="Gray" />
                                                <Label Text="•" 
                                                       FontSize="10" 
                                                       TextColor="Gray" />
                                                <Label Text="{Binding Date}" 
                                                       FontSize="10" 
                                                       TextColor="Gray" />
                                            </StackLayout>
                                            
                                            <!-- Action Buttons -->
                                            <StackLayout Orientation="Horizontal" 
                                                         Spacing="8" 
                                                         Margin="0,8,0,0">
                                                <!-- GENERIC LINK TEXT - "Read more" without context -->
                                                <Button Text="Read more" 
                                                        BackgroundColor="Blue" 
                                                        TextColor="White" 
                                                        CornerRadius="6" 
                                                        FontSize="12" 
                                                        FontAttributes="Bold" 
                                                        Padding="12,6"
                                                        Clicked="OnArticleReadMoreClicked" />
                                                
                                                <Button Text="↗️" 
                                                        FontSize="16" 
                                                        BackgroundColor="LightGray" 
                                                        TextColor="Gray" 
                                                        WidthRequest="32" 
                                                        HeightRequest="32" 
                                                        CornerRadius="6" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
