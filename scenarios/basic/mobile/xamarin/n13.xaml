<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.MissingSkipLink"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="ShopMart">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                
                <Frame BackgroundColor="White" 
                       CornerRadius="0" 
                       Padding="16" 
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Entry Placeholder="Search products..." 
                               FontSize="16" 
                               HorizontalOptions="FillAndExpand" />
                        <Button Text="Search" 
                                BackgroundColor="Blue" 
                                TextColor="White" 
                                FontSize="16" 
                                Padding="20,12" />
                    </StackLayout>
                </Frame>
                
                <!-- Category Navigation -->
                <ScrollView Orientation="Horizontal" 
                            BackgroundColor="White" 
                            Padding="16,8">
                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Button Text="All" 
                                BackgroundColor="Blue" 
                                TextColor="White" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Electronics" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Clothing" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Home & Garden" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Sports" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Books" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Beauty" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Toys" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                    </StackLayout>
                </ScrollView>

                <StackLayout Padding="16" Spacing="16">
                    <StackLayout Spacing="8">
                        <Label Text="All Products" 
                               FontSize="24" 
                               FontAttributes="Bold" />
                        <Label Text="6 products found" 
                               FontSize="14" 
                               TextColor="Gray" />
                    </StackLayout>
                    
                    <!-- Products Grid -->
                    <CollectionView ItemsSource="{Binding Products}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" 
                                       CornerRadius="12" 
                                       Padding="0" 
                                       Margin="0,0,0,16"
                                       HasShadow="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Product Image Container -->
                                        <Frame Grid.Row="0" 
                                               BackgroundColor="LightGray" 
                                               CornerRadius="12,12,0,0" 
                                               Padding="0"
                                               HasShadow="False">
                                            <Grid>
                                                <Image Source="{Binding Image}" 
                                                       Aspect="AspectFill" />
                                                
                                                <!-- Discount Badge -->
                                                <Frame BackgroundColor="Red" 
                                                       CornerRadius="4" 
                                                       Padding="6,2" 
                                                       HorizontalOptions="Start" 
                                                       VerticalOptions="Start" 
                                                       Margin="8,8,0,0"
                                                       HasShadow="False">
                                                    <Label Text="{Binding DiscountText}" 
                                                           FontSize="10" 
                                                           FontAttributes="Bold" 
                                                           TextColor="White" />
                                                </Frame>
                                                
                                                <!-- Out of Stock Overlay -->
                                                <Frame BackgroundColor="Black" 
                                                       Opacity="0.7" 
                                                       CornerRadius="12,12,0,0" 
                                                       HorizontalOptions="Fill" 
                                                       VerticalOptions="Fill"
                                                       IsVisible="{Binding IsOutOfStock}"
                                                       HasShadow="False">
                                                    <Label Text="Out of Stock" 
                                                           TextColor="White" 
                                                           FontSize="12" 
                                                           FontAttributes="Bold" 
                                                           HorizontalOptions="Center" 
                                                           VerticalOptions="Center" />
                                                </Frame>
                                            </Grid>
                                        </Frame>
                                        
                                        <!-- Product Info -->
                                        <StackLayout Grid.Row="1" 
                                                     Padding="12" 
                                                     Spacing="8">
                                            <!-- Product Name -->
                                            <Label Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   MaxLines="2" />
                                            
                                            <!-- Rating -->
                                            <StackLayout Orientation="Horizontal" Spacing="4">
                                                <Label Text="⭐" FontSize="12" />
                                                <Label Text="⭐" FontSize="12" />
                                                <Label Text="⭐" FontSize="12" />
                                                <Label Text="⭐" FontSize="12" />
                                                <Label Text="☆" FontSize="12" />
                                                <Label Text="{Binding Rating}" FontSize="10" TextColor="Gray" />
                                            </StackLayout>
                                            
                                            <!-- Price -->
                                            <StackLayout Orientation="Horizontal" Spacing="8">
                                                <Label Text="{Binding Price}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold" 
                                                       TextColor="Green" />
                                                <Label Text="{Binding OriginalPrice}" 
                                                       FontSize="12" 
                                                       TextColor="Gray" 
                                                       IsVisible="{Binding HasOriginalPrice}" />
                                            </StackLayout>
                                            
                                            <!-- Add to Cart Button -->
                                            <Button Text="Add to Cart" 
                                                    BackgroundColor="Blue" 
                                                    TextColor="White" 
                                                    CornerRadius="6" 
                                                    FontSize="12" 
                                                    IsEnabled="{Binding InStock}" />
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
