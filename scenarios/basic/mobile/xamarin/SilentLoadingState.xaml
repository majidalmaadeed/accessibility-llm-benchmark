<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.SilentLoadingState"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Data Dashboard">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Header -->
                <Frame BackgroundColor="Blue" 
                       CornerRadius="0" 
                       Padding="24" 
                       HasShadow="False">
                    <StackLayout Spacing="8">
                        <Label Text="Analytics Dashboard" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="White" />
                        <Label Text="Real-time data and insights" 
                               FontSize="16" 
                               TextColor="White" 
                               Opacity="0.7" />
                    </StackLayout>
                </Frame>
                
                <!-- Loading State - SILENT LOADING STATE -->
                <Frame BackgroundColor="White" 
                       CornerRadius="0" 
                       Padding="32" 
                       IsVisible="{Binding IsLoading}"
                       HasShadow="False">
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Spacing="16">
                        <!-- SILENT LOADING STATE - Content spinner without screen reader announcement -->
                        <ActivityIndicator x:Name="LoadingSpinner" 
                                          IsRunning="True" 
                                          Color="Blue" 
                                          WidthRequest="40" 
                                          HeightRequest="40" />
                        
                        <Label Text="Loading data..." 
                               FontSize="16" 
                               TextColor="Gray" 
                               HorizontalTextAlignment="Center" />
                        
                        <!-- Progress Bar -->
                        <ProgressBar x:Name="ProgressBar" 
                                    Progress="0.6" 
                                    ProgressColor="Blue" 
                                    WidthRequest="200" />
                        
                        <Label Text="60% complete" 
                               FontSize="14" 
                               TextColor="Gray" 
                               HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>
                
                <!-- Main Content -->
                <StackLayout Padding="20" 
                             Spacing="20" 
                             IsVisible="{Binding IsContentLoaded}">
                    <!-- Stats Cards -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Users Card -->
                        <Frame Grid.Row="0" Grid.Column="0" 
                               BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="20" 
                               Margin="0,0,8,8"
                               HasShadow="True">
                            <StackLayout HorizontalOptions="Center" Spacing="8">
                                <Label Text="ðŸ‘¥" FontSize="32" />
                                <Label Text="Total Users" 
                                       FontSize="14" 
                                       TextColor="Gray" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="12,456" 
                                       FontSize="24" 
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="+12% from last month" 
                                       FontSize="12" 
                                       TextColor="Green" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Frame>
                        
                        <!-- Revenue Card -->
                        <Frame Grid.Row="0" Grid.Column="1" 
                               BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="20" 
                               Margin="8,0,0,8"
                               HasShadow="True">
                            <StackLayout HorizontalOptions="Center" Spacing="8">
                                <Label Text="ðŸ’°" FontSize="32" />
                                <Label Text="Revenue" 
                                       FontSize="14" 
                                       TextColor="Gray" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="$45,678" 
                                       FontSize="24" 
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="+8% from last month" 
                                       FontSize="12" 
                                       TextColor="Green" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Frame>
                        
                        <!-- Orders Card -->
                        <Frame Grid.Row="1" Grid.Column="0" 
                               BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="20" 
                               Margin="0,8,8,0"
                               HasShadow="True">
                            <StackLayout HorizontalOptions="Center" Spacing="8">
                                <Label Text="ðŸ“¦" FontSize="32" />
                                <Label Text="Orders" 
                                       FontSize="14" 
                                       TextColor="Gray" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="2,345" 
                                       FontSize="24" 
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="+15% from last month" 
                                       FontSize="12" 
                                       TextColor="Green" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Frame>
                        
                        <!-- Conversion Rate Card -->
                        <Frame Grid.Row="1" Grid.Column="1" 
                               BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="20" 
                               Margin="8,8,0,0"
                               HasShadow="True">
                            <StackLayout HorizontalOptions="Center" Spacing="8">
                                <Label Text="ðŸ“ˆ" FontSize="32" />
                                <Label Text="Conversion Rate" 
                                       FontSize="14" 
                                       TextColor="Gray" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="3.2%" 
                                       FontSize="24" 
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="+0.3% from last month" 
                                       FontSize="12" 
                                       TextColor="Green" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                    
                    <!-- Recent Activity -->
                    <Frame BackgroundColor="White" 
                           CornerRadius="12" 
                           Padding="20" 
                           HasShadow="True">
                        <StackLayout Spacing="16">
                            <Label Text="Recent Activity" 
                                   FontSize="18" 
                                   FontAttributes="Bold" />
                            
                            <StackLayout Spacing="12">
                                <StackLayout Orientation="Horizontal" Spacing="12">
                                    <Frame BackgroundColor="LightGreen" 
                                           CornerRadius="16" 
                                           Padding="8" 
                                           WidthRequest="32" 
                                           HeightRequest="32"
                                           HasShadow="False">
                                        <Label Text="âœ“" 
                                               FontSize="16" 
                                               TextColor="Green" 
                                               HorizontalTextAlignment="Center" 
                                               VerticalTextAlignment="Center" />
                                    </Frame>
                                    <StackLayout>
                                        <Label Text="New user registration" 
                                               FontSize="14" 
                                               FontAttributes="Bold" />
                                        <Label Text="2 minutes ago" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                </StackLayout>
                                
                                <StackLayout Orientation="Horizontal" Spacing="12">
                                    <Frame BackgroundColor="LightBlue" 
                                           CornerRadius="16" 
                                           Padding="8" 
                                           WidthRequest="32" 
                                           HeightRequest="32"
                                           HasShadow="False">
                                        <Label Text="ðŸ’°" 
                                               FontSize="16" 
                                               TextColor="Blue" 
                                               HorizontalTextAlignment="Center" 
                                               VerticalTextAlignment="Center" />
                                    </Frame>
                                    <StackLayout>
                                        <Label Text="Payment received" 
                                               FontSize="14" 
                                               FontAttributes="Bold" />
                                        <Label Text="15 minutes ago" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                </StackLayout>
                                
                                <StackLayout Orientation="Horizontal" Spacing="12">
                                    <Frame BackgroundColor="LightOrange" 
                                           CornerRadius="16" 
                                           Padding="8" 
                                           WidthRequest="32" 
                                           HeightRequest="32"
                                           HasShadow="False">
                                        <Label Text="ðŸ“¦" 
                                               FontSize="16" 
                                               TextColor="Orange" 
                                               HorizontalTextAlignment="Center" 
                                               VerticalTextAlignment="Center" />
                                    </Frame>
                                    <StackLayout>
                                        <Label Text="Order shipped" 
                                               FontSize="14" 
                                               FontAttributes="Bold" />
                                        <Label Text="1 hour ago" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Refresh Button -->
                    <Button Text="Refresh Data" 
                            BackgroundColor="Blue" 
                            TextColor="White" 
                            FontSize="16" 
                            Padding="24,12" 
                            CornerRadius="8" 
                            Clicked="OnRefreshClicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
