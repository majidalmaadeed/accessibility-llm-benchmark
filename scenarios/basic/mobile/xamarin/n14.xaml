<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.MissingTableHeader"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Employee Directory">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Search and Filter Bar -->
                <Frame BackgroundColor="White" 
                       CornerRadius="0" 
                       Padding="16" 
                       HasShadow="False">
                    <StackLayout Spacing="16">
                        <Entry Placeholder="Search employees..." 
                               FontSize="16" />
                        
                        <Picker x:Name="SortPicker" 
                                Title="Sort by">
                            <Picker.Items>
                                <x:String>Name</x:String>
                                <x:String>Department</x:String>
                                <x:String>Position</x:String>
                                <x:String>Salary</x:String>
                                <x:String>Start Date</x:String>
                                <x:String>Status</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>
                </Frame>
                
                
                <CollectionView ItemsSource="{Binding Employees}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   CornerRadius="0" 
                                   Padding="16" 
                                   Margin="0,0,0,1"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Employee Avatar -->
                                    <Frame Grid.Column="0" 
                                           BackgroundColor="LightBlue" 
                                           CornerRadius="16" 
                                           Padding="8" 
                                           WidthRequest="32" 
                                           HeightRequest="32"
                                           HasShadow="False">
                                        <Label Text="{Binding Initials}" 
                                               FontSize="12" 
                                               FontAttributes="Bold" 
                                               TextColor="Blue" 
                                               HorizontalTextAlignment="Center" 
                                               VerticalTextAlignment="Center" />
                                    </Frame>
                                    
                                    <!-- Employee Info -->
                                    <StackLayout Grid.Column="1" 
                                                 Margin="12,0,0,0">
                                        <!-- Name -->
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" />
                                        
                                        <!-- Department -->
                                        <Label Text="{Binding Department}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- Position -->
                                        <Label Text="{Binding Position}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- Salary -->
                                        <Label Text="{Binding Salary}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- Start Date -->
                                        <Label Text="{Binding StartDate}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- Status -->
                                        <Frame BackgroundColor="{Binding StatusColor}" 
                                               CornerRadius="12" 
                                               Padding="8,4" 
                                               HorizontalOptions="Start"
                                               Margin="0,4,0,0"
                                               HasShadow="False">
                                            <Label Text="{Binding Status}" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold" 
                                                   TextColor="White" />
                                        </Frame>
                                        
                                        <!-- Email -->
                                        <Label Text="{Binding Email}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- Phone -->
                                        <Label Text="{Binding Phone}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                    
                                    <!-- Action Buttons -->
                                    <StackLayout Grid.Column="2" 
                                                 Orientation="Horizontal" 
                                                 Spacing="8">
                                        <Button Text="👁️" 
                                                FontSize="16" 
                                                BackgroundColor="Transparent" 
                                                TextColor="Gray" 
                                                BorderWidth="0" 
                                                WidthRequest="32" 
                                                HeightRequest="32" />
                                        <Button Text="✏️" 
                                                FontSize="16" 
                                                BackgroundColor="Transparent" 
                                                TextColor="Gray" 
                                                BorderWidth="0" 
                                                WidthRequest="32" 
                                                HeightRequest="32" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Summary Footer -->
                <Frame BackgroundColor="White" 
                       CornerRadius="0" 
                       Padding="16" 
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="SpaceBetween">
                        <Label Text="{Binding TotalEmployees}" 
                               FontSize="14" 
                               FontAttributes="Bold" />
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="8">
                            <Label Text="{Binding SortBy}" 
                                   FontSize="12" 
                                   TextColor="Gray" />
                            <Label Text="↓" 
                                   FontSize="12" 
                                   TextColor="Gray" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
