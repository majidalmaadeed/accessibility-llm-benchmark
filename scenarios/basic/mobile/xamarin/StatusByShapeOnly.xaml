<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.StatusByShapeOnly"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Document Management">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Filter Tabs -->
                <StackLayout Orientation="Horizontal" BackgroundColor="White">
                    <Button Text="All Documents" 
                            BackgroundColor="Transparent" 
                            TextColor="Blue" 
                            FontAttributes="Bold" 
                            BorderWidth="0" 
                            Padding="20,16" />
                    <Button Text="â— Approved" 
                            BackgroundColor="Transparent" 
                            TextColor="Gray" 
                            BorderWidth="0" 
                            Padding="20,16" />
                    <Button Text="â–  Pending" 
                            BackgroundColor="Transparent" 
                            TextColor="Gray" 
                            BorderWidth="0" 
                            Padding="20,16" />
                    <Button Text="â— Rejected" 
                            BackgroundColor="Transparent" 
                            TextColor="Gray" 
                            BorderWidth="0" 
                            Padding="20,16" />
                </StackLayout>
                
                <!-- Bulk Actions -->
                <Frame BackgroundColor="LightBlue" 
                       CornerRadius="0" 
                       Padding="16" 
                       IsVisible="{Binding HasSelectedItems}"
                       HasShadow="False">
                    <StackLayout Spacing="12">
                        <Label Text="{Binding SelectedCount}" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="Blue" />
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Button Text="Approve" 
                                    BackgroundColor="Green" 
                                    TextColor="White" 
                                    FontSize="12" 
                                    Padding="16,8" />
                            <Button Text="Reject" 
                                    BackgroundColor="Red" 
                                    TextColor="White" 
                                    FontSize="12" 
                                    Padding="16,8" />
                            <Button Text="Download" 
                                    BackgroundColor="Blue" 
                                    TextColor="White" 
                                    FontSize="12" 
                                    Padding="16,8" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
                <!-- Documents List -->
                <CollectionView ItemsSource="{Binding Documents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   CornerRadius="12" 
                                   Padding="16" 
                                   Margin="16,0,16,12"
                                   HasShadow="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Selection Checkbox and File Icon -->
                                    <StackLayout Grid.Column="0" 
                                                 Orientation="Horizontal" 
                                                 Spacing="12">
                                        <!-- Selection Checkbox -->
                                        <Button Text="â˜" 
                                                FontSize="16" 
                                                BackgroundColor="Transparent" 
                                                TextColor="Gray" 
                                                BorderWidth="0" 
                                                WidthRequest="20" 
                                                HeightRequest="20" 
                                                Clicked="OnItemSelectClicked" />
                                        
                                        <!-- File Icon -->
                                        <Frame BackgroundColor="LightBlue" 
                                               CornerRadius="8" 
                                               Padding="8" 
                                               WidthRequest="40" 
                                               HeightRequest="40"
                                               HasShadow="False">
                                            <Label Text="{Binding Icon}" 
                                                   FontSize="20" 
                                                   TextColor="Blue" 
                                                   HorizontalTextAlignment="Center" 
                                                   VerticalTextAlignment="Center" />
                                        </Frame>
                                    </StackLayout>
                                    
                                    <!-- Document Info -->
                                    <StackLayout Grid.Column="1" 
                                                 Margin="12,0,0,0">
                                        <!-- Document Name -->
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" />
                                        
                                        <!-- Document Type -->
                                        <Label Text="{Binding Type}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        
                                        <!-- File Size and Date -->
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label Text="{Binding Size}" 
                                                   FontSize="12" 
                                                   TextColor="Gray" />
                                            <Label Text="â€¢" 
                                                   FontSize="12" 
                                                   TextColor="Gray" />
                                            <Label Text="{Binding LastModified}" 
                                                   FontSize="12" 
                                                   TextColor="Gray" />
                                        </StackLayout>
                                        
                                        <!-- Author and Department -->
                                        <Label Text="{Binding AuthorDepartment}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                    
                                    <!-- Status Icon and Action Buttons -->
                                    <StackLayout Grid.Column="2" 
                                                 Orientation="Horizontal" 
                                                 Spacing="8">
                                        <!-- Status Icon - STATUS BY SHAPE ONLY -->
                                        <Frame BackgroundColor="{Binding StatusColor}" 
                                               CornerRadius="10" 
                                               Padding="0" 
                                               WidthRequest="20" 
                                               HeightRequest="20"
                                               HasShadow="False">
                                            <!-- STATUS BY SHAPE ONLY - No text labels, only shapes -->
                                            <!-- Circle for approved/rejected, Square for pending -->
                                        </Frame>
                                        
                                        <!-- Action Buttons -->
                                        <Button Text="ðŸ‘ï¸" 
                                                FontSize="16" 
                                                BackgroundColor="Transparent" 
                                                TextColor="Gray" 
                                                BorderWidth="0" 
                                                WidthRequest="32" 
                                                HeightRequest="32" />
                                        <Button Text="âœï¸" 
                                                FontSize="16" 
                                                BackgroundColor="Transparent" 
                                                TextColor="Gray" 
                                                BorderWidth="0" 
                                                WidthRequest="32" 
                                                HeightRequest="32" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
