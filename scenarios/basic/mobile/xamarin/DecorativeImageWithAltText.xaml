<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AccessibilityTest.DecorativeImageWithAltText"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Product Catalog">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <!-- Hero Section with Decorative Images -->
                <Frame BackgroundColor="Blue" 
                       CornerRadius="0" 
                       Padding="0" 
                       HeightRequest="200">
                    <Grid>
                        <!-- Decorative Background Pattern - DECORATIVE IMAGE WITH ALT TEXT -->
                        <Image Source="https://via.placeholder.com/100x100" 
                               HorizontalOptions="End" 
                               VerticalOptions="Start" 
                               Margin="0,20,20,0"
                               // DECORATIVE IMAGE WITH ALT TEXT - Unnecessary descriptive alt text for decorative image
                               AutomationProperties.HelpText="Decorative geometric pattern with blue and white triangles creating a modern abstract background design for visual appeal" />
                        
                        <!-- Another Decorative Element -->
                        <Image Source="https://via.placeholder.com/80x80" 
                               HorizontalOptions="Start" 
                               VerticalOptions="End" 
                               Margin="30,0,0,30"
                               // DECORATIVE IMAGE WITH ALT TEXT - Unnecessary descriptive alt text for decorative image
                               AutomationProperties.HelpText="Decorative circular pattern with gradient colors and geometric shapes used as a visual design element" />
                        
                        <!-- Main Content -->
                        <StackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center" 
                                     Spacing="8">
                            <Label Text="Discover Amazing Products" 
                                   FontSize="28" 
                                   FontAttributes="Bold" 
                                   TextColor="White" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Find the perfect items for your needs" 
                                   FontSize="16" 
                                   TextColor="White" 
                                   Opacity="0.7" 
                                   HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Grid>
                </Frame>
                
                <!-- Category Filter -->
                <ScrollView Orientation="Horizontal" 
                            BackgroundColor="White" 
                            Padding="16,8">
                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Button Text="All" 
                                BackgroundColor="Blue" 
                                TextColor="White" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Electronics" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Clothing" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Home" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                        <Button Text="Sports" 
                                BackgroundColor="LightGray" 
                                TextColor="Black" 
                                CornerRadius="20" 
                                Padding="16,8" />
                    </StackLayout>
                </ScrollView>
                
                <!-- Products Grid -->
                <CollectionView ItemsSource="{Binding Products}" 
                                Padding="16">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   CornerRadius="12" 
                                   Padding="0" 
                                   Margin="0,0,0,16"
                                   HasShadow="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Product Image Container -->
                                    <Frame Grid.Row="0" 
                                           BackgroundColor="LightGray" 
                                           CornerRadius="12,12,0,0" 
                                           Padding="0"
                                           HasShadow="False">
                                        <Grid>
                                            <!-- Product Image -->
                                            <Image Source="{Binding Image}" 
                                                   Aspect="AspectFill" 
                                                   Grid.Row="0" />
                                            
                                            <!-- Decorative Border Pattern - DECORATIVE IMAGE WITH ALT TEXT -->
                                            <Image Source="https://via.placeholder.com/200x200" 
                                                   Aspect="AspectFill" 
                                                   Grid.Row="0"
                                                   // DECORATIVE IMAGE WITH ALT TEXT - Unnecessary descriptive alt text for decorative border
                                                   AutomationProperties.HelpText="Decorative border pattern with intricate geometric designs and subtle gradient effects used purely for visual enhancement and aesthetic appeal" />
                                            
                                            <!-- Discount Badge -->
                                            <Frame BackgroundColor="Red" 
                                                   CornerRadius="4" 
                                                   Padding="6,2" 
                                                   HorizontalOptions="Start" 
                                                   VerticalOptions="Start" 
                                                   Margin="8,8,0,0"
                                                   HasShadow="False">
                                                <Label Text="{Binding DiscountText}" 
                                                       TextColor="White" 
                                                       FontSize="10" 
                                                       FontAttributes="Bold" />
                                            </Frame>
                                            
                                            <!-- Decorative Corner Element - DECORATIVE IMAGE WITH ALT TEXT -->
                                            <Image Source="https://via.placeholder.com/20x20" 
                                                   HorizontalOptions="End" 
                                                   VerticalOptions="Start" 
                                                   Margin="0,8,8,0"
                                                   // DECORATIVE IMAGE WITH ALT TEXT - Unnecessary descriptive alt text for decorative corner element
                                                   AutomationProperties.HelpText="Small decorative corner element with star-shaped design and golden color used as a visual accent" />
                                        </Grid>
                                    </Frame>
                                    
                                    <!-- Product Info -->
                                    <StackLayout Grid.Row="1" Padding="12">
                                        <!-- Product Name -->
                                        <Label Text="{Binding Name}" 
                                               FontSize="14" 
                                               FontAttributes="Bold" 
                                               MaxLines="2" />
                                        
                                        <!-- Rating -->
                                        <StackLayout Orientation="Horizontal" Spacing="4" Margin="0,4,0,0">
                                            <Label Text="⭐" FontSize="12" />
                                            <Label Text="⭐" FontSize="12" />
                                            <Label Text="⭐" FontSize="12" />
                                            <Label Text="⭐" FontSize="12" />
                                            <Label Text="☆" FontSize="12" />
                                            <Label Text="{Binding Rating}" FontSize="10" TextColor="Gray" />
                                        </StackLayout>
                                        
                                        <!-- Price -->
                                        <StackLayout Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                            <Label Text="{Binding Price}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   TextColor="Green" />
                                            <Label Text="{Binding OriginalPrice}" 
                                                   FontSize="12" 
                                                   TextColor="Gray" 
                                                   IsVisible="{Binding HasOriginalPrice}" />
                                        </StackLayout>
                                        
                                        <!-- Add to Cart Button -->
                                        <Button Text="Add to Cart" 
                                                BackgroundColor="Blue" 
                                                TextColor="White" 
                                                CornerRadius="6" 
                                                FontSize="12" 
                                                Margin="0,8,0,0" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
