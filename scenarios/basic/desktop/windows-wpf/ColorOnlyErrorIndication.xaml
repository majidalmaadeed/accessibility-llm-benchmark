<Window x:Class="AccessibilityTest.ColorOnlyErrorIndication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="0" Padding="24">
            <StackPanel>
                <Border Background="White" CornerRadius="8" Padding="24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <!-- Form Fields -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="First Name *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="FirstName" Padding="12" FontSize="16" 
                                     Text="Enter your first name" LostFocus="ValidateFirstName"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Last Name *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="LastName" Padding="12" FontSize="16" 
                                     Text="Enter your last name" LostFocus="ValidateLastName"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Email Address *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="Email" Padding="12" FontSize="16" 
                                     Text="Enter your email" LostFocus="ValidateEmail"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Password *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <PasswordBox x:Name="Password" Padding="12" FontSize="16" 
                                         LostFocus="ValidatePassword"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Confirm Password *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <PasswordBox x:Name="ConfirmPassword" Padding="12" FontSize="16" 
                                         LostFocus="ValidateConfirmPassword"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Phone Number" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="Phone" Padding="12" FontSize="16" 
                                     Text="Enter your phone number" LostFocus="ValidatePhone"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Date of Birth *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <DatePicker x:Name="DateOfBirth" Padding="12" FontSize="16" 
                                        SelectedDateChanged="ValidateDateOfBirth"/>
                        </StackPanel>
                        
                        <!-- Terms and Conditions -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="Terms" Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" Checked="ValidateTerms" 
                                          Unchecked="ValidateTerms"/>
                                <TextBlock Text="I agree to the Terms and Conditions" FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Newsletter Subscription -->
                        <StackPanel Margin="0,0,0,32">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="Newsletter" Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Subscribe to our newsletter" FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Cancel" Background="Transparent" Foreground="Gray" 
                                    Padding="24,12" FontSize="16" BorderBrush="Gray" BorderThickness="1" 
                                    Margin="0,0,16,0" Click="Cancel_Click"/>
                            <Button Content="Create Account" Background="Blue" Foreground="White" 
                                    Padding="24,12" FontSize="16" Click="CreateAccount_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
