<Window x:Class="AccessibilityTest.InaccessibleTooltip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form Builder" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="0" Padding="24">
            <StackPanel>
                <!-- Form Fields -->
                <Border Background="White" CornerRadius="8" Padding="24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <!-- Form Title -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Form Title *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Text="Enter form title"/>
                        </StackPanel>
                        
                        <!-- Form Description -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Description" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Height="100" 
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     Text="Enter form description"/>
                        </StackPanel>
                        
                        <!-- Form Type -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Form Type *" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Select the type of form you want to create. This determines the default fields and settings."/>
                            </StackPanel>
                            <ComboBox Padding="12" FontSize="16">
                                <ComboBoxItem Content="Select form type" IsSelected="True"/>
                                <ComboBoxItem Content="Survey"/>
                                <ComboBoxItem Content="Registration"/>
                                <ComboBoxItem Content="Feedback"/>
                                <ComboBoxItem Content="Application"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Response Collection -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Response Collection" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Enable this to collect and store responses from form submissions. Disable for view-only forms."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" IsChecked="True"/>
                                <TextBlock Text="Enable response collection for this form" FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Privacy Settings -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Privacy Settings" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Choose who can access and submit this form. Public forms are accessible to everyone."/>
                            </StackPanel>
                            <ComboBox Padding="12" FontSize="16">
                                <ComboBoxItem Content="Select privacy level" IsSelected="True"/>
                                <ComboBoxItem Content="Public"/>
                                <ComboBoxItem Content="Internal"/>
                                <ComboBoxItem Content="Private"/>
                                <ComboBoxItem Content="Confidential"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Submission Deadline -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Submission Deadline" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Set a deadline for form submissions. After this date, the form will be closed for new responses."/>
                            </StackPanel>
                            <DatePicker Padding="12" FontSize="16"/>
                        </StackPanel>
                        
                        <!-- Email Notifications -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Email Notifications" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Receive email alerts when someone submits a response to your form."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" IsChecked="True"/>
                                <TextBlock Text="Send email notifications for form submissions" FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Advanced Options -->
                        <StackPanel Margin="0,0,0,32">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Advanced Options" FontSize="16" FontWeight="Bold"/>
                                <!-- INACCESSIBLE TOOLTIP - Help icon shows tooltip on hover only, not keyboard accessible -->
                                <Button Content="?" FontSize="16" Background="LightBlue" 
                                        Width="24" Height="24" Margin="8,0,0,0" 
                                        Click="ShowTooltip_Click" ToolTip="Enable advanced customization features like custom validation rules, conditional logic, and API integration."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Enable advanced form customization options" FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Cancel" Background="Transparent" Foreground="Gray" 
                                    Padding="24,12" FontSize="16" BorderBrush="Gray" BorderThickness="1" 
                                    Margin="0,0,16,0" Click="Cancel_Click"/>
                            <Button Content="Create Form" Background="Blue" Foreground="White" 
                                    Padding="24,12" FontSize="16" Click="CreateForm_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
