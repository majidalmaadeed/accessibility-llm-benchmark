<Window x:Class="AccessibilityTest.RightClickOnlyMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Manager" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="White" Padding="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="📁" FontSize="16" Background="LightBlue" 
                            Width="40" Height="40" Margin="0,0,12,0" Click="NewFolder_Click"/>
                    <Button Content="📄" FontSize="16" Background="LightGreen" 
                            Width="40" Height="40" Margin="0,0,12,0" Click="NewFile_Click"/>
                    <Button Content="📤" FontSize="16" Background="LightOrange" 
                            Width="40" Height="40" Margin="0,0,12,0" Click="UploadFile_Click"/>
                    <Button Content="🔍" FontSize="16" Background="LightGray" 
                            Width="40" Height="40" Click="SearchFiles_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Breadcrumb Navigation -->
        <Border Grid.Row="0" Background="LightGray" Padding="16" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📁" FontSize="16" Margin="0,0,8,0"/>
                <TextBlock Text="Home" FontSize="14" FontWeight="Bold" Margin="0,0,8,0"/>
                <TextBlock Text=">" FontSize="14" Foreground="Gray" Margin="0,0,8,0"/>
                <TextBlock Text="Documents" FontSize="14" FontWeight="Bold" Margin="0,0,8,0"/>
                <TextBlock Text=">" FontSize="14" Foreground="Gray" Margin="0,0,8,0"/>
                <TextBlock Text="Projects" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <!-- File List -->
        <ScrollViewer Grid.Row="1" Background="White">
            <StackPanel>
                <!-- File 1 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightBlue" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Project Proposal.docx" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Document • 2.4 MB • 2024-01-20" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By John Smith • Engineering" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- File 2 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightGreen" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Budget Report.xlsx" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Spreadsheet • 1.8 MB • 2024-01-19" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By Sarah Johnson • Finance" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- File 3 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightPink" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Meeting Notes.pdf" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="PDF • 856 KB • 2024-01-18" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By Mike Chen • Marketing" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- File 4 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightYellow" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Design Mockups.sketch" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Design • 15.2 MB • 2024-01-17" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By Emily Davis • Design" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- File 5 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightBlue" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Contract Template.docx" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Document • 1.2 MB • 2024-01-16" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By David Wilson • Legal" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- File 6 -->
                <Border Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0" 
                                  VerticalAlignment="Center" Click="ToggleSelection_Click"/>
                        
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="LightPink" 
                                 Margin="0,0,12,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="User Research.pdf" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="PDF • 3.1 MB • 2024-01-15" FontSize="12" 
                                       Foreground="Gray" Margin="0,0,0,2"/>
                            <TextBlock Text="By Lisa Brown • Research" FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="Active" FontSize="12" Foreground="Gray" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="👁️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="ViewFile_Click"/>
                            <Button Content="✏️" FontSize="16" Background="Transparent" Width="32" Height="32" 
                                    Margin="0,0,8,0" Click="EditFile_Click"/>
                            <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                            <Button Content="⋯" FontSize="20" Background="LightGray" Width="32" Height="32" 
                                    Click="ShowContextMenu_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Summary Footer -->
        <Border Grid.Row="2" Background="White" Padding="16" BorderBrush="#eee" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="SpaceBetween">
                <TextBlock Text="Total Files: 6" FontSize="14" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sort by: Name" FontSize="12" Foreground="Gray" Margin="0,0,8,0"/>
                    <TextBlock Text="↓" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Context Menu - RIGHT-CLICK ONLY MENU -->
        <Border x:Name="ContextMenu" Background="White" CornerRadius="8" Padding="0" 
                Visibility="Collapsed" Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel>
                <Button Content="📂 Open" Background="Transparent" Foreground="Black" 
                        FontSize="14" Padding="12,16" BorderThickness="0" 
                        Click="OpenFile_Click" HorizontalContentAlignment="Left"/>
                <Button Content="📋 Copy" Background="Transparent" Foreground="Black" 
                        FontSize="14" Padding="12,16" BorderThickness="0" 
                        Click="CopyFile_Click" HorizontalContentAlignment="Left"/>
                <Button Content="✏️ Rename" Background="Transparent" Foreground="Black" 
                        FontSize="14" Padding="12,16" BorderThickness="0" 
                        Click="RenameFile_Click" HorizontalContentAlignment="Left"/>
                <Button Content="📤 Share" Background="Transparent" Foreground="Black" 
                        FontSize="14" Padding="12,16" BorderThickness="0" 
                        Click="ShareFile_Click" HorizontalContentAlignment="Left"/>
                <!-- RIGHT-CLICK ONLY MENU - Essential delete option only available via right-click -->
                <Button Content="🗑️ Delete" Background="Transparent" Foreground="Red" 
                        FontSize="14" FontWeight="Bold" Padding="12,16" BorderThickness="0" 
                        Click="DeleteFile_Click" HorizontalContentAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
