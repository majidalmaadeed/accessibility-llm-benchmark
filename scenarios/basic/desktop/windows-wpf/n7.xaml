<Window x:Class="AccessibilityTest.InsufficientButtonSpacing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Action Center" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Action Center" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Manage your tasks and actions" FontSize="16" 
                           Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Quick Actions - INSUFFICIENT BUTTON SPACING -->
                <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- INSUFFICIENT BUTTON SPACING - Only 2px apart instead of minimum 44px -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                    Margin="0,0,0,16">
                            <Button Content="Save" Background="Green" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="SaveAction_Click"/>
                            <Button Content="Edit" Background="Blue" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="EditAction_Click"/>
                            <Button Content="Delete" Background="Red" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="DeleteAction_Click"/>
                            <Button Content="Share" Background="Orange" Foreground="White" 
                                    Padding="12,8" FontSize="14" Click="ShareAction_Click"/>
                        </StackPanel>
                        
                        <!-- Another row with insufficient spacing -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Copy" Background="Gray" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="CopyAction_Click"/>
                            <Button Content="Move" Background="Purple" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="MoveAction_Click"/>
                            <Button Content="Archive" Background="Teal" Foreground="White" 
                                    Padding="12,8" FontSize="14" Margin="0,0,2,0" Click="ArchiveAction_Click"/>
                            <Button Content="Export" Background="Brown" Foreground="White" 
                                    Padding="12,8" FontSize="14" Click="ExportAction_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Document Actions -->
                <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Document Actions" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- INSUFFICIENT BUTTON SPACING - Only 2px apart -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="📄" FontSize="16" Background="LightBlue" 
                                    Width="40" Height="40" Margin="0,0,2,0" Click="NewDocument_Click"/>
                            <Button Content="📁" FontSize="16" Background="LightGreen" 
                                    Width="40" Height="40" Margin="0,0,2,0" Click="OpenFolder_Click"/>
                            <Button Content="🔍" FontSize="16" Background="LightYellow" 
                                    Width="40" Height="40" Margin="0,0,2,0" Click="SearchAction_Click"/>
                            <Button Content="⚙️" FontSize="16" Background="LightGray" 
                                    Width="40" Height="40" Click="SettingsAction_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Media Controls -->
                <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Media Controls" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- INSUFFICIENT BUTTON SPACING - Only 2px apart -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="⏮️" FontSize="20" Background="LightGray" 
                                    Width="50" Height="50" Margin="0,0,2,0" Click="PreviousTrack_Click"/>
                            <Button Content="⏸️" FontSize="24" Background="Blue" Foreground="White" 
                                    Width="60" Height="60" Margin="0,0,2,0" Click="PlayPause_Click"/>
                            <Button Content="⏭️" FontSize="20" Background="LightGray" 
                                    Width="50" Height="50" Margin="0,0,2,0" Click="NextTrack_Click"/>
                            <Button Content="🔀" FontSize="20" Background="LightGray" 
                                    Width="50" Height="50" Margin="0,0,2,0" Click="ShuffleMode_Click"/>
                            <Button Content="🔁" FontSize="20" Background="LightGray" 
                                    Width="50" Height="50" Click="RepeatMode_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Actions -->
                <Border Background="White" CornerRadius="8" Padding="16" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Navigation" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- INSUFFICIENT BUTTON SPACING - Only 2px apart -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="←" FontSize="18" Background="LightBlue" 
                                    Width="44" Height="44" Margin="0,0,2,0" Click="GoBack_Click"/>
                            <Button Content="↑" FontSize="18" Background="LightBlue" 
                                    Width="44" Height="44" Margin="0,0,2,0" Click="GoUp_Click"/>
                            <Button Content="→" FontSize="18" Background="LightBlue" 
                                    Width="44" Height="44" Margin="0,0,2,0" Click="GoForward_Click"/>
                            <Button Content="↓" FontSize="18" Background="LightBlue" 
                                    Width="44" Height="44" Click="GoDown_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
