<Window x:Class="AccessibilityTest.SilentLoadingState"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Dashboard" Height="600" Width="800">
    <Window.Resources>
        <!-- Loading Animation -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingSpinner" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Loading State - SILENT LOADING STATE -->
        <Border Grid.Row="0" Background="White" Padding="32" 
                x:Name="LoadingSection" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- SILENT LOADING STATE - Content spinner without screen reader announcement -->
                <Ellipse x:Name="LoadingSpinner" Width="40" Height="40" 
                         Stroke="#f3f3f3" StrokeThickness="4" 
                         StrokeDashArray="4,4" StrokeDashCap="Round"
                         RenderTransformOrigin="0.5,0.5" Margin="0,0,0,16">
                    <Ellipse.RenderTransform>
                        <RotateTransform/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                
                <TextBlock Text="Loading data..." FontSize="16" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                
                <!-- Progress Bar -->
                <Border Width="200" Height="4" Background="#f3f3f3" 
                        CornerRadius="2" Margin="0,0,0,8">
                    <Border x:Name="ProgressFill" Width="120" Height="4" 
                            Background="Blue" CornerRadius="2" 
                            HorizontalAlignment="Left"/>
                </Border>
                
                <TextBlock x:Name="ProgressText" Text="60% complete" FontSize="14" 
                           Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" x:Name="MainContent" Visibility="Collapsed" Padding="20">
            <StackPanel>
                <!-- Dashboard Header -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Welcome back!" FontSize="24" FontWeight="Bold" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Your session is active and secure" FontSize="16" 
                                   Foreground="Gray" Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏰" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="5 minutes remaining" FontSize="14" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions -->
                <TextBlock Text="Quick Actions" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                <UniformGrid Columns="4">
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="View Reports" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Manage Users" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Settings" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="❓" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Help & Support" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Recent Activity -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,24,0,0" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontSize="20" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="🟢" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="User logged in" FontSize="14" FontWeight="Bold" 
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="2 minutes ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Report generated" FontSize="14" FontWeight="Bold" 
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="15 minutes ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Settings updated" FontSize="14" FontWeight="Bold" 
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="1 hour ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <Button Content="Refresh Data" Background="Blue" Foreground="White" 
                        Padding="24,12" FontSize="16" Margin="0,24,0,0" 
                        HorizontalAlignment="Center" Click="RefreshData_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
