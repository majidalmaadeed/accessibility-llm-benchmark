<Window x:Class="AccessibilityTest.MissingPageTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" Padding="16">
            <StackPanel>
                <!-- Account Section -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,16" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Account" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16" Background="LightGray" Padding="16" 
                                   CornerRadius="8,8,0,0"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightBlue" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Profile Information" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Manage your personal details" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightGreen" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Security & Privacy" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Password, 2FA, and privacy settings" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="40" Height="40" Fill="LightYellow" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Billing & Subscription" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Manage your subscription and payment" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Preferences Section -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,16" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Preferences" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16" Background="LightGray" Padding="16" 
                                   CornerRadius="8,8,0,0"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightPurple" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Theme & Appearance" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Dark mode, colors, and display settings" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightOrange" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Notifications" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Push notifications and alerts" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="40" Height="40" Fill="LightPink" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Language & Region" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Language, timezone, and regional settings" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Support Section -->
                <Border Background="White" CornerRadius="8" Padding="24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Support" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,16" Background="LightGray" Padding="16" 
                                   CornerRadius="8,8,0,0"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightCyan" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Help Center" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="FAQs, guides, and tutorials" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Ellipse Width="40" Height="40" Fill="LightSalmon" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Contact Support" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Get help from our support team" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="40" Height="40" Fill="LightSteelBlue" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="About" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="App version, terms, and privacy policy" FontSize="14" 
                                               Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Text=">" FontSize="20" Foreground="Gray" 
                                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
