<Window x:Class="AccessibilityTest.LowContrastWarningText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Dashboard" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Warning Banner - LOW CONTRAST WARNING TEXT -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="16">
            <StackPanel Orientation="Horizontal">
                <!-- Warning Icon - LOW CONTRAST -->
                <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                
                <StackPanel>
                    <TextBlock Text="Session Timeout Warning" FontSize="16" FontWeight="Bold" 
                               Foreground="#757575" Margin="0,0,0,4"/>
                    <TextBlock Text="Your session will expire in 5 minutes. Please save your work and extend your session to continue." 
                               FontSize="14" Foreground="#BDBDBD"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <!-- Action Buttons - LOW CONTRAST -->
                    <Button Content="Extend" Background="Transparent" Foreground="#90CAF9" 
                            BorderThickness="0" Padding="8,4" Margin="0,0,8,0" Click="ExtendSession_Click"/>
                    <Button Content="Logout" Background="Transparent" Foreground="#EF9A9A" 
                            BorderThickness="0" Padding="8,4" Click="Logout_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Dashboard Header -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,24" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Welcome back!" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="Your session is active and secure" FontSize="16" 
                                   Foreground="Gray" Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏰" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="5 minutes remaining" FontSize="14" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions -->
                <TextBlock Text="Quick Actions" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                <UniformGrid Columns="4">
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="View Reports" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Manage Users" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,8,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Settings" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,8" 
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="❓" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Help & Support" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Recent Activity -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,24,0,0" 
                        Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="🟢" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="User logged in" FontSize="14" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Text="2 minutes ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Report generated" FontSize="14" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Text="15 minutes ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Settings updated" FontSize="14" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Text="1 hour ago" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
