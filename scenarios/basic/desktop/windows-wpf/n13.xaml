<Window x:Class="AccessibilityTest.MissingSkipLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShopMart" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBox Width="300" Padding="12" FontSize="16" Margin="0,0,12,0" 
                             Text="Search products..."/>
                    <Button Content="Search" Background="Blue" Foreground="White" 
                            Padding="12,8" FontSize="16" Click="Search_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Category Navigation -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Padding="16" 
                    VerticalAlignment="Bottom">
            <Button Content="All" Background="Blue" Foreground="White" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Electronics" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Clothing" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Home & Garden" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Sports" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Books" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Beauty" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Toys" Background="LightGray" Padding="16,8"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <TextBlock Text="All Products" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="6 products found" FontSize="14" Foreground="Gray" Margin="0,0,0,16"/>
                
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.Items>
                        <!-- Product 1 -->
                        <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Border Grid.Row="0" Background="LightGray" Height="200" Width="200" 
                                            CornerRadius="4" Margin="0,0,0,12">
                                        <Image Source="https://via.placeholder.com/200x200" 
                                               Stretch="Uniform"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Wireless Bluetooth Headphones" FontSize="16" 
                                                   FontWeight="Bold" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⭐⭐⭐⭐☆" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="4.5" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="$99.99" FontSize="18" FontWeight="Bold" 
                                                       Foreground="Green" Margin="0,0,8,0"/>
                                            <TextBlock Text="$149.99" FontSize="14" Foreground="Gray" 
                                                       TextDecorations="Strikethrough"/>
                                        </StackPanel>
                                        <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                                Padding="12,8" Click="AddToCart_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Product 2 -->
                        <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Border Grid.Row="0" Background="LightGray" Height="200" Width="200" 
                                            CornerRadius="4" Margin="0,0,0,12">
                                        <Image Source="https://via.placeholder.com/200x200" 
                                               Stretch="Uniform"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Smart Watch" FontSize="16" FontWeight="Bold" 
                                                   Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="4.8" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="$299.99" FontSize="18" FontWeight="Bold" 
                                                       Foreground="Green" Margin="0,0,8,0"/>
                                            <TextBlock Text="$399.99" FontSize="14" Foreground="Gray" 
                                                       TextDecorations="Strikethrough"/>
                                        </StackPanel>
                                        <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                                Padding="12,8" Click="AddToCart_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Product 3 -->
                        <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Border Grid.Row="0" Background="LightGray" Height="200" Width="200" 
                                            CornerRadius="4" Margin="0,0,0,12">
                                        <Image Source="https://via.placeholder.com/200x200" 
                                               Stretch="Uniform"/>
                                        <Border Background="#B0000000" CornerRadius="4" 
                                                VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="Out of Stock" FontSize="12" FontWeight="Bold" 
                                                       Foreground="White" Padding="8"/>
                                        </Border>
                                    </Border>
                                    
                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Laptop Stand" FontSize="16" FontWeight="Bold" 
                                                   Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⭐⭐⭐⭐☆" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="4.2" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="$49.99" FontSize="18" FontWeight="Bold" 
                                                       Foreground="Green" Margin="0,0,8,0"/>
                                            <TextBlock Text="$69.99" FontSize="14" Foreground="Gray" 
                                                       TextDecorations="Strikethrough"/>
                                        </StackPanel>
                                        <Button Content="Add to Cart" Background="Gray" Foreground="White" 
                                                Padding="12,8" IsEnabled="False"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </ItemsControl.Items>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
