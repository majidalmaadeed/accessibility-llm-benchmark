<Page
    x:Class="AccessibilityTest.DecorativeImageWithAltText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccessibilityTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Hero Section with Decorative Images -->
        <Border Grid.Row="0" Background="Blue" Height="200">
            <Grid>
                <!-- Decorative Background Pattern - DECORATIVE IMAGE WITH ALT TEXT -->
                <Image Source="https://via.placeholder.com/100x100" Width="100" Height="100" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0"/>
                
                <!-- Another Decorative Element -->
                <Image Source="https://via.placeholder.com/80x80" Width="80" Height="80" 
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,30"/>
                
                <!-- Main Content -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Discover Amazing Products" FontSize="28" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Find the perfect items for your needs" FontSize="16" 
                               Foreground="White" HorizontalAlignment="Center" Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Category Filter -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Padding="16" 
                    VerticalAlignment="Bottom">
            <Button Content="All" Background="Blue" Foreground="White" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Electronics" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Clothing" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Home" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Sports" Background="LightGray" Padding="16,8"/>
        </StackPanel>
        
        <!-- Products Grid -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.Items>
                    <!-- Product 1 -->
                    <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                            Shadow="{ThemeResource CardShadow}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="LightGray" Height="200" Width="200" 
                                        CornerRadius="4" Margin="0,0,0,12">
                                    <Image Source="https://via.placeholder.com/200x200" 
                                           Stretch="Uniform"/>
                                    
                                    <!-- Decorative Border Pattern - DECORATIVE IMAGE WITH ALT TEXT -->
                                    <Image Source="https://via.placeholder.com/200x200" 
                                           Stretch="Uniform" Opacity="0.3"/>
                                    
                                    <!-- Decorative Corner Element - DECORATIVE IMAGE WITH ALT TEXT -->
                                    <Image Source="https://via.placeholder.com/20x20" Width="20" Height="20" 
                                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Wireless Headphones" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⭐⭐⭐⭐☆" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="4.5" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="$99.99" FontSize="18" FontWeight="Bold" 
                                                   Foreground="Green" Margin="0,0,8,0"/>
                                        <TextBlock Text="$149.99" FontSize="14" Foreground="Gray" 
                                                   TextDecorations="Strikethrough"/>
                                    </StackPanel>
                                    <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                            Padding="12,8" Click="AddToCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Product 2 -->
                    <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                            Shadow="{ThemeResource CardShadow}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="LightGray" Height="200" Width="200" 
                                        CornerRadius="4" Margin="0,0,0,12">
                                    <Image Source="https://via.placeholder.com/200x200" 
                                           Stretch="Uniform"/>
                                    
                                    <!-- Decorative Border Pattern - DECORATIVE IMAGE WITH ALT TEXT -->
                                    <Image Source="https://via.placeholder.com/200x200" 
                                           Stretch="Uniform" Opacity="0.3"/>
                                    
                                    <!-- Decorative Corner Element - DECORATIVE IMAGE WITH ALT TEXT -->
                                    <Image Source="https://via.placeholder.com/20x20" Width="20" Height="20" 
                                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Smart Watch" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="4.8" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="$299.99" FontSize="18" FontWeight="Bold" 
                                                   Foreground="Green" Margin="0,0,8,0"/>
                                        <TextBlock Text="$399.99" FontSize="14" Foreground="Gray" 
                                                   TextDecorations="Strikethrough"/>
                                    </StackPanel>
                                    <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                            Padding="12,8" Click="AddToCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </ItemsControl.Items>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
