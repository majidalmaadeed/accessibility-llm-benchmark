<Page
    x:Class="AccessibilityTest.UngroupedRadioButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccessibilityTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Step Indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Background="White" Padding="24">
            <Ellipse Width="32" Height="32" Fill="Blue" Margin="0,0,8,0"/>
            <TextBlock Text="1" FontSize="16" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-32,0,0,0"/>
            <Rectangle Width="50" Height="2" Fill="Blue" Margin="8,0"/>
            <Ellipse Width="32" Height="32" Fill="LightGray" Margin="0,0,8,0"/>
            <TextBlock Text="2" FontSize="16" FontWeight="Bold" Foreground="Gray" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-32,0,0,0"/>
            <Rectangle Width="50" Height="2" Fill="LightGray" Margin="8,0"/>
            <Ellipse Width="32" Height="32" Fill="LightGray" Margin="0,0,0,0"/>
            <TextBlock Text="3" FontSize="16" FontWeight="Bold" Foreground="Gray" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-32,0,0,0"/>
        </StackPanel>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel>
                <!-- Personal Information -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Personal Information" FontSize="20" FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="First Name *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Text="Enter your first name"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Last Name *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Text="Enter your last name"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Email Address *" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Text="Enter your email"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Phone Number" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,8"/>
                            <TextBox Padding="12" FontSize="16" Text="Enter your phone number"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Contact Preferences - UNGROUPED RADIO BUTTONS -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Contact Preferences" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="How would you like us to contact you? (Select all that apply)" 
                                   FontSize="14" Foreground="Gray" Margin="0,0,0,16"/>
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" Click="ToggleContactPreference_Click"/>
                                <TextBlock Text="Email notifications" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" Click="ToggleContactPreference_Click"/>
                                <TextBlock Text="SMS messages" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" Click="ToggleContactPreference_Click"/>
                                <TextBlock Text="Phone calls" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                          VerticalAlignment="Center" Click="ToggleContactPreference_Click"/>
                                <TextBlock Text="Push notifications" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Newsletter Preferences - UNGROUPED RADIO BUTTONS -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Newsletter Frequency" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="How often would you like to receive our newsletter?" 
                                   FontSize="14" Foreground="Gray" Margin="0,0,0,16"/>
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton Name="DailyRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="NewsletterFrequency" 
                                            Click="NewsletterFrequency_Click"/>
                                <TextBlock Text="Daily" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton Name="WeeklyRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="NewsletterFrequency" 
                                            Click="NewsletterFrequency_Click"/>
                                <TextBlock Text="Weekly" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton Name="MonthlyRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="NewsletterFrequency" 
                                            Click="NewsletterFrequency_Click"/>
                                <TextBlock Text="Monthly" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="NeverRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="NewsletterFrequency" 
                                            Click="NewsletterFrequency_Click"/>
                                <TextBlock Text="Never" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Account Type - UNGROUPED RADIO BUTTONS -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Account Type" FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="What type of account are you creating?" 
                                   FontSize="14" Foreground="Gray" Margin="0,0,0,16"/>
                        
                        <!-- UNGROUPED RADIO BUTTONS - No fieldset grouping -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton Name="PersonalRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="AccountType" 
                                            Click="AccountType_Click"/>
                                <TextBlock Text="Personal Account" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton Name="BusinessRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="AccountType" 
                                            Click="AccountType_Click"/>
                                <TextBlock Text="Business Account" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="EnterpriseRadio" Width="20" Height="20" Margin="0,0,12,0" 
                                            VerticalAlignment="Center" GroupName="AccountType" 
                                            Click="AccountType_Click"/>
                                <TextBlock Text="Enterprise Account" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Terms and Conditions -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                      VerticalAlignment="Center" Click="ToggleTerms_Click"/>
                            <TextBlock Text="I agree to the Terms and Conditions" FontSize="16" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Newsletter Subscription -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,32" 
                        Shadow="{ThemeResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Width="20" Height="20" Margin="0,0,12,0" 
                                      VerticalAlignment="Center" Click="ToggleNewsletter_Click"/>
                            <TextBlock Text="Subscribe to our newsletter" FontSize="16" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Previous" Background="Transparent" Foreground="Gray" 
                            Padding="24,12" FontSize="16" BorderBrush="Gray" BorderThickness="1" 
                            Margin="0,0,16,0" Click="Previous_Click"/>
                    <Button Content="Next" Background="Blue" Foreground="White" 
                            Padding="24,12" FontSize="16" Click="Next_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
