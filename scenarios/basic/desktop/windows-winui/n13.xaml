<Page
    x:Class="AccessibilityTest.UnlabeledMediaButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccessibilityTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="LightGray" Padding="20">
            <TextBlock Text="Video Player" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Video Area -->
            <Border Grid.Row="0" Background="DarkGray" Margin="20">
                <Grid>
                    <Image Source="https://via.placeholder.com/400x300" Stretch="Uniform"/>
                    
                    <!-- Video Overlay -->
                    <Border Background="#80000000" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- UNLABELED MEDIA BUTTON - Video play button using only emoji icon without accessible name -->
                            <Button Content="▶️" FontSize="40" Background="Transparent" BorderThickness="0" 
                                    Foreground="White" Width="60" Height="60" Click="PlayPause_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Video Title -->
                    <TextBlock Text="Flutter Development Tutorial" Foreground="White" FontSize="18" 
                               FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                               Margin="0,0,0,60"/>
                </Grid>
            </Border>
            
            <!-- Progress Bar -->
            <StackPanel Grid.Row="1" Margin="20,0,20,20">
                <ProgressBar Value="30" Height="4" Background="DarkGray" Foreground="Red"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock Text="2:15" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="7:30" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="⏮️" FontSize="16" Background="LightGray" Width="50" Height="50" 
                    Margin="5" Click="Previous_Click"/>
            <Button Content="⏸️" FontSize="20" Background="Blue" Foreground="White" Width="60" Height="60" 
                    Margin="5" Click="PlayPause_Click"/>
            <Button Content="⏭️" FontSize="16" Background="LightGray" Width="50" Height="50" 
                    Margin="5" Click="Next_Click"/>
            <Button Content="🔊" FontSize="16" Background="LightGray" Width="50" Height="50" 
                    Margin="5" Click="Volume_Click"/>
            <Button Content="⛶" FontSize="16" Background="LightGray" Width="50" Height="50" 
                    Margin="5" Click="Fullscreen_Click"/>
        </StackPanel>
    </Grid>
</Page>
