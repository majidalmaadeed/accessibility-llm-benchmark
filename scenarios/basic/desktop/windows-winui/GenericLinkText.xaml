<Page
    x:Class="AccessibilityTest.GenericLinkText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccessibilityTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Featured Article -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Margin="16" Padding="20" 
                Shadow="{ThemeResource CardShadow}">
            <StackPanel>
                <Image Source="https://via.placeholder.com/400x200" Height="200" Width="400" 
                       Stretch="Uniform" Margin="0,0,0,16"/>
                
                <Border Background="LightBlue" CornerRadius="12" Padding="4,8" HorizontalAlignment="Left" 
                        Margin="0,0,0,12">
                    <TextBlock Text="Featured" FontSize="12" FontWeight="Bold" Foreground="Blue"/>
                </Border>
                
                <TextBlock Text="Building Scalable React Native Applications" FontSize="22" FontWeight="Bold" 
                           Margin="0,0,0,12"/>
                
                <TextBlock Text="Discover the key principles and patterns for creating maintainable and scalable React Native applications that can grow with your business needs." 
                           FontSize="16" Foreground="Gray" Margin="0,0,0,16" TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Ellipse Width="32" Height="32" Fill="Blue" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Alex Thompson" FontSize="14" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBlock Text="January 20, 2024" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                    <TextBlock Text="12 min read" FontSize="12" Foreground="Gray" 
                               VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>
                
                <!-- GENERIC LINK TEXT - "Read more" without context -->
                <Button Content="Read more" Background="Blue" Foreground="White" 
                        Padding="24,12" FontSize="16" FontWeight="Bold" 
                        HorizontalAlignment="Left" Click="ReadMore_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Category Filter -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Padding="16" 
                    VerticalAlignment="Bottom">
            <Button Content="All" Background="Blue" Foreground="White" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Technology" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Design" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Business" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Science" Background="LightGray" Padding="16,8"/>
        </StackPanel>
        
        <!-- Articles List -->
        <ScrollViewer Grid.Row="1" Padding="16">
            <StackPanel>
                <TextBlock Text="Recent Articles" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                
                <!-- Article 1 -->
                <Border Background="White" CornerRadius="8" Margin="0,0,0,16" Padding="16" 
                        Shadow="{ThemeResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="LightGray" Width="120" Height="80" 
                                CornerRadius="8" Margin="0,0,12,0">
                            <Image Source="https://via.placeholder.com/120x80" Stretch="Uniform"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1">
                            <Border Background="Blue" CornerRadius="4" Padding="2,6" HorizontalAlignment="Left" 
                                    Margin="0,0,0,8">
                                <TextBlock Text="Technology" FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            
                            <TextBlock Text="Understanding Flutter Performance Optimization" FontSize="16" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            
                            <TextBlock Text="Learn how to optimize your Flutter applications for better performance and user experience." 
                                       FontSize="12" Foreground="Gray" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="By John Smith" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="•" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="2024-01-15" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <!-- GENERIC LINK TEXT - "Read more" without context -->
                                <Button Content="Read more" Background="Blue" Foreground="White" 
                                        Padding="12,6" FontSize="12" FontWeight="Bold" 
                                        Margin="0,0,8,0" Click="ReadMore_Click"/>
                                <Button Content="↗️" FontSize="16" Background="LightGray" Width="32" Height="32" 
                                        Click="ShareArticle_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Article 2 -->
                <Border Background="White" CornerRadius="8" Margin="0,0,0,16" Padding="16" 
                        Shadow="{ThemeResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="LightGray" Width="120" Height="80" 
                                CornerRadius="8" Margin="0,0,12,0">
                            <Image Source="https://via.placeholder.com/120x80" Stretch="Uniform"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1">
                            <Border Background="Blue" CornerRadius="4" Padding="2,6" HorizontalAlignment="Left" 
                                    Margin="0,0,0,8">
                                <TextBlock Text="Design" FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            
                            <TextBlock Text="Mobile UI/UX Design Best Practices" FontSize="16" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            
                            <TextBlock Text="Essential design principles for creating intuitive and accessible mobile interfaces." 
                                       FontSize="12" Foreground="Gray" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="By Sarah Johnson" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="•" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="2024-01-12" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <!-- GENERIC LINK TEXT - "Read more" without context -->
                                <Button Content="Read more" Background="Blue" Foreground="White" 
                                        Padding="12,6" FontSize="12" FontWeight="Bold" 
                                        Margin="0,0,8,0" Click="ReadMore_Click"/>
                                <Button Content="↗️" FontSize="16" Background="LightGray" Width="32" Height="32" 
                                        Click="ShareArticle_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Article 3 -->
                <Border Background="White" CornerRadius="8" Margin="0,0,0,16" Padding="16" 
                        Shadow="{ThemeResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="LightGray" Width="120" Height="80" 
                                CornerRadius="8" Margin="0,0,12,0">
                            <Image Source="https://via.placeholder.com/120x80" Stretch="Uniform"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1">
                            <Border Background="Blue" CornerRadius="4" Padding="2,6" HorizontalAlignment="Left" 
                                    Margin="0,0,0,8">
                                <TextBlock Text="Technology" FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            
                            <TextBlock Text="Cross-Platform Development Strategies" FontSize="16" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            
                            <TextBlock Text="Compare different approaches to building apps that work across multiple platforms." 
                                       FontSize="12" Foreground="Gray" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="By Mike Chen" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="•" FontSize="10" Foreground="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="2024-01-10" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <!-- GENERIC LINK TEXT - "Read more" without context -->
                                <Button Content="Read more" Background="Blue" Foreground="White" 
                                        Padding="12,6" FontSize="12" FontWeight="Bold" 
                                        Margin="0,0,8,0" Click="ReadMore_Click"/>
                                <Button Content="↗️" FontSize="16" Background="LightGray" Width="32" Height="32" 
                                        Click="ShareArticle_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
