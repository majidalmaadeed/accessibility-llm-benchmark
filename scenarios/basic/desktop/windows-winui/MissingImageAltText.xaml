<Page
    x:Class="AccessibilityTest.MissingImageAltText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccessibilityTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20">
            <StackPanel>
                <TextBlock Text="TechStore" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Discover amazing tech products" FontSize="16" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Category Filter -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Padding="16" 
                    VerticalAlignment="Bottom">
            <Button Content="All" Background="Blue" Foreground="White" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Electronics" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Wearables" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Audio" Background="LightGray" Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="Accessories" Background="LightGray" Padding="16,8"/>
        </StackPanel>
        
        <!-- Product Grid -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.Items>
                    <!-- Product 1 -->
                    <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                            Shadow="{ThemeResource CardShadow}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- MISSING IMAGE ALT TEXT - Product image without alternative text -->
                                <Image Grid.Row="0" Source="https://via.placeholder.com/200x200" 
                                       Height="200" Width="200" Stretch="Uniform" Margin="0,0,0,12"/>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Wireless Bluetooth Headphones" FontSize="16" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⭐⭐⭐⭐☆" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="4.5" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="$99.99" FontSize="18" FontWeight="Bold" 
                                                   Foreground="Green" Margin="0,0,8,0"/>
                                        <TextBlock Text="$149.99" FontSize="14" Foreground="Gray" 
                                                   TextDecorations="Strikethrough"/>
                                    </StackPanel>
                                    <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                            Padding="12,8" Click="AddToCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Product 2 -->
                    <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                            Shadow="{ThemeResource CardShadow}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- MISSING IMAGE ALT TEXT - Product image without alternative text -->
                                <Image Grid.Row="0" Source="https://via.placeholder.com/200x200" 
                                       Height="200" Width="200" Stretch="Uniform" Margin="0,0,0,12"/>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Smart Watch" FontSize="16" FontWeight="Bold" 
                                               Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="4.8" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="$299.99" FontSize="18" FontWeight="Bold" 
                                                   Foreground="Green" Margin="0,0,8,0"/>
                                        <TextBlock Text="$399.99" FontSize="14" Foreground="Gray" 
                                                   TextDecorations="Strikethrough"/>
                                    </StackPanel>
                                    <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                            Padding="12,8" Click="AddToCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Product 3 -->
                    <Border Background="White" CornerRadius="8" Margin="8" Padding="16" 
                            Shadow="{ThemeResource CardShadow}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- MISSING IMAGE ALT TEXT - Product image without alternative text -->
                                <Image Grid.Row="0" Source="https://via.placeholder.com/200x200" 
                                       Height="200" Width="200" Stretch="Uniform" Margin="0,0,0,12"/>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Portable Bluetooth Speaker" FontSize="16" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⭐⭐⭐⭐☆" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="4.3" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="$79.99" FontSize="18" FontWeight="Bold" 
                                                   Foreground="Green" Margin="0,0,8,0"/>
                                        <TextBlock Text="$99.99" FontSize="14" Foreground="Gray" 
                                                   TextDecorations="Strikethrough"/>
                                    </StackPanel>
                                    <Button Content="Add to Cart" Background="Blue" Foreground="White" 
                                            Padding="12,8" Click="AddToCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </ItemsControl.Items>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
