<?xml version="1.0" encoding="utf-8" ?>
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Main Content Card -->
            <Frame BackgroundColor="#f8f9fa" 
                   BorderColor="#dee2e6" 
                   CornerRadius="8" 
                   Padding="30">
                <StackLayout Spacing="20">
                    <!-- Title -->
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#333333" />
                    <!-- Description -->
                           FontSize="16" 
                           TextColor="#666666" />
                    <!-- Open Modal Button -->
                    <Button x:Name="OpenModalButton" 
                            Text="Open Settings Modal" 
                            BackgroundColor="#007bff" 
                            TextColor="White" 
                            FontSize="16" 
                            FontAttributes="Bold" 
                            CornerRadius="4" 
                            Padding="15,30" 
                            Clicked="OnOpenModalClicked" />
                    <!-- Description -->
                           FontSize="14" 
                           TextColor="#666666" />
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#e9ecef" 
                   BorderColor="#dee2e6" 
                   CornerRadius="4" 
                   Padding="20">
                <StackLayout Spacing="15">
                           FontSize="12" 
                           TextColor="#666666" />
                    <!-- How to Fix -->
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#333333" />
                           FontSize="12" 
                           TextColor="#666666" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
