<?xml version="1.0" encoding="utf-8" ?>
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Main Content Card -->
            <Frame BackgroundColor="#f8f9fa" 
                   BorderColor="#dee2e6" 
                   CornerRadius="8" 
                   Padding="30">
                <StackLayout Spacing="20">
                    <!-- Title -->
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#333333" />
                    <!-- Description -->
                           FontSize="16" 
                           TextColor="#666666" />
                    <!-- Notification Controls -->
                    <StackLayout Spacing="15">
                        <!-- Success Notification -->
                        <Button x:Name="ShowSuccessButton" 
                                Text="Show Success Notification" 
                                BackgroundColor="#28a745" 
                                TextColor="White" 
                                FontSize="16" 
                                FontAttributes="Bold" 
                                CornerRadius="4" 
                                Padding="15,20" 
                                Clicked="OnShowSuccessClicked" />
                        <!-- Error Notification -->
                        <Button x:Name="ShowErrorButton" 
                                Text="Show Error Notification" 
                                BackgroundColor="#dc3545" 
                                TextColor="White" 
                                FontSize="16" 
                                FontAttributes="Bold" 
                                CornerRadius="4" 
                                Padding="15,20" 
                                Clicked="OnShowErrorClicked" />
                        <!-- Warning Notification -->
                        <Button x:Name="ShowWarningButton" 
                                Text="Show Warning Notification" 
                                BackgroundColor="#ffc107" 
                                TextColor="#212529" 
                                FontSize="16" 
                                FontAttributes="Bold" 
                                CornerRadius="4" 
                                Padding="15,20" 
                                Clicked="OnShowWarningClicked" />
                        <!-- Info Notification -->
                        <Button x:Name="ShowInfoButton" 
                                Text="Show Info Notification" 
                                BackgroundColor="#17a2b8" 
                                TextColor="White" 
                                FontSize="16" 
                                FontAttributes="Bold" 
                                CornerRadius="4" 
                                Padding="15,20" 
                                Clicked="OnShowInfoClicked" />
                        <!-- Clear All Button -->
                        <Button x:Name="ClearAllButton" 
                                Text="Clear All Notifications" 
                                BackgroundColor="#6c757d" 
                                TextColor="White" 
                                FontSize="14" 
                                FontAttributes="Bold" 
                                CornerRadius="4" 
                                Padding="10,20" 
                                Clicked="OnClearAllClicked" />
                    </StackLayout>
                </StackLayout>
            </Frame>
            <!-- Toast Notifications Container -->
            <StackLayout x:Name="ToastContainer" Spacing="10" />
            <Frame BackgroundColor="#e9ecef" 
                   BorderColor="#dee2e6" 
                   CornerRadius="4" 
                   Padding="20">
                <StackLayout Spacing="15">
                           FontSize="12" 
                           TextColor="#666666" />
                    <!-- How to Fix -->
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#333333" />
                           FontSize="12" 
                           TextColor="#666666" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
