<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F5F5F5">
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <!-- Main Content Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="8" 
                   HasShadow="True" 
                   Padding="30">
                <StackLayout Spacing="20">
                    <!-- Title -->
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333333" />
                    <!-- Description -->
                           FontSize="16"
                           TextColor="#666666" />
                    <!-- Filter Section -->
                    <StackLayout Spacing="8">
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#333333" />
                        <!-- Custom Dropdown -->
                        <StackLayout WidthRequest="200">
                            <Button x:Name="DropdownButton"
                                    Text="{Binding SelectedText}"
                                    BackgroundColor="#F8F9FA"
                                    TextColor="#333333"
                                    FontSize="16"
                                    BorderWidth="2"
                                    BorderColor="#DDDDDD"
                                    CornerRadius="4"
                                    HeightRequest="44"
                                    HorizontalOptions="Start"
                                    Clicked="OnDropdownButtonClicked" />
                            <CollectionView x:Name="DropdownList"
                                           IsVisible="{Binding IsOpen}"
                                           BackgroundColor="White"
                                           BorderWidth="2"
                                           BorderColor="#007BFF"
                                           CornerRadius="4"
                                           Margin="0,0,0,0"
                                           ItemsSource="{Binding Options}"
                                           SelectionMode="Single"
                                           SelectionChanged="OnOptionSelected">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                                   Text="{Binding Text}"
                                                   FontSize="16"
                                                   TextColor="#333333"
                                                   VerticalOptions="Center" />
                                                   Text="âœ“"
                                                   FontSize="16"
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   IsVisible="{Binding IsSelected}"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                    <!-- Results Section -->
                    <StackLayout Spacing="16">
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333333" />
                        <CollectionView ItemsSource="{Binding FilteredProducts}"
                                       HeightRequest="200">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                                Span="2" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="White"
                                           CornerRadius="8"
                                           HasShadow="True"
                                           Padding="20"
                                           Margin="8">
                                        <StackLayout Spacing="8">
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#333333"
                                                   FontSize="12"
                                                   TextColor="#666666"
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>