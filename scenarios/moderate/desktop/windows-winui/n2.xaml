      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Main Content Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login Form"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,16" />
                    <!-- Description -->
                    <TextBlock Text="Please enter your credentials to access your account."
                               FontSize="16"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,30" />
                    <!-- Login Form -->
                    <StackPanel Margin="0,0,0,30">
                        <!-- Username Field -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Username:"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                       Margin="0,0,0,5" />
                            <TextBox x:Name="UsernameInput"
                                     Height="40"
                                     FontSize="16"
                                     BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                     BorderThickness="2"
                                     VerticalAlignment="Center"
                                     TextChanged="OnUsernameChanged"
                                     KeyDown="OnKeyDown" />
                            <TextBlock x:Name="UsernameError"
                                       Text=""
                                       Foreground="{ThemeResource SystemAccentColor}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed" />
                        </StackPanel>
                        <!-- Password Field -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Password:"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                       Margin="0,0,0,5" />
                            <PasswordBox x:Name="PasswordInput"
                                         Height="40"
                                         FontSize="16"
                                         BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                         BorderThickness="2"
                                         VerticalAlignment="Center"
                                         PasswordChanged="OnPasswordChanged"
                                         KeyDown="OnKeyDown" />
                            <TextBlock x:Name="PasswordError"
                                       Text=""
                                       Foreground="{ThemeResource SystemAccentColor}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed" />
                        </StackPanel>
                        <!-- Generic Error Message - NOT ASSOCIATED WITH SPECIFIC FIELDS -->
                        <Border x:Name="GenericErrorPanel"
                                Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <TextBlock x:Name="GenericErrorMessage"
                                       Text="Please fill in all required fields."
                                       FontSize="14"
                                       FontWeight="Bold" />
                        </Border>
                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                                Content="Login"
                                Height="50"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                Click="OnLoginClicked"
                                Margin="0,10,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="4"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        <Run Text="• Missing AutomationProperties.HelpedBy: Error messages are not linked to input fields" />
                        <LineBreak />
                        <Run Text="• No AutomationProperties.IsRequiredForForm: Input fields don't indicate validation state" />
                        <LineBreak />
                        <Run Text="• Generic error: Generic error message doesn't specify which fields have issues" />
                        <LineBreak />
                    </TextBlock>
                    <TextBlock Text=""
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,10,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• Add AutomationProperties.HelpedBy to link error messages to fields" />
                        <LineBreak />
                        <Run Text="• Add AutomationProperties.IsRequiredForForm to indicate required fields" />
                        <LineBreak />
                        <Run Text="• Use specific error messages for each field" />
                        <LineBreak />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
