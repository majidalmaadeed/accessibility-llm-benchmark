      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Main Content Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Title -->
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,16" />
                    <!-- Description -->
                               FontSize="16"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,30" />
                    <StackPanel>
                                    Orientation="Horizontal"
                                    Margin="0,0,0,0">
                                    Content="General"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    BorderThickness="0"
                                    Padding="20,0"
                                    Margin="0,0,2,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4,4,0,0">
                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                            FontFamily="{TemplateBinding FontFamily}"
                                                            FontSize="{TemplateBinding FontSize}"
                                                            FontWeight="{TemplateBinding FontWeight}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Padding="{TemplateBinding Padding}" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                                    Content="Security"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    BorderThickness="0"
                                    Padding="20,0"
                                    Margin="0,0,2,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4,4,0,0">
                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                            FontFamily="{TemplateBinding FontFamily}"
                                                            FontSize="{TemplateBinding FontSize}"
                                                            FontWeight="{TemplateBinding FontWeight}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Padding="{TemplateBinding Padding}" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                                    Content="Privacy"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    BorderThickness="0"
                                    Padding="20,0"
                                    Margin="0,0,2,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4,4,0,0">
                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                            FontFamily="{TemplateBinding FontFamily}"
                                                            FontSize="{TemplateBinding FontSize}"
                                                            FontWeight="{TemplateBinding FontWeight}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Padding="{TemplateBinding Padding}" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                                    Content="Advanced"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    BorderThickness="0"
                                    Padding="20,0"
                                    Margin="0,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4,4,0,0">
                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                            FontFamily="{TemplateBinding FontFamily}"
                                                            FontSize="{TemplateBinding FontSize}"
                                                            FontWeight="{TemplateBinding FontWeight}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Padding="{TemplateBinding Padding}" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1,0,1,1"
                                CornerRadius="0,0,4,4"
                                Padding="30"
                                MinHeight="400">
                                        Visibility="Visible">
                                <TextBlock Text="General Settings"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,20" />
                                <StackPanel>
                                    <CheckBox x:Name="AutoStartCheckBox"
                                              Content="Start application on system startup"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="NotificationsCheckBox"
                                              Content="Enable desktop notifications"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="UpdatesCheckBox"
                                              Content="Automatically check for updates"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <TextBlock Text="Theme:"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0" />
                                        <ComboBox x:Name="ThemeComboBox"
                                                  Width="150"
                                                  Height="35"
                                                  FontSize="14">
                                            <ComboBoxItem Content="Light" IsSelected="True" />
                                            <ComboBoxItem Content="Dark" />
                                            <ComboBoxItem Content="Auto" />
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                                        Visibility="Collapsed">
                                <TextBlock Text="Security Settings"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,20" />
                                <StackPanel>
                                    <CheckBox x:Name="TwoFactorCheckBox"
                                              Content="Enable two-factor authentication"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="BiometricCheckBox"
                                              Content="Use biometric authentication"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="SessionTimeoutCheckBox"
                                              Content="Enable session timeout"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <TextBlock Text="Session timeout (minutes):"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0" />
                                        <TextBox x:Name="TimeoutTextBox"
                                                 Width="80"
                                                 Height="35"
                                                 FontSize="14"
                                                 Text="30" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                                        Visibility="Collapsed">
                                <TextBlock Text="Privacy Settings"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,20" />
                                <StackPanel>
                                    <CheckBox x:Name="AnalyticsCheckBox"
                                              Content="Allow usage analytics"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="CrashReportsCheckBox"
                                              Content="Send crash reports"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="LocationCheckBox"
                                              Content="Allow location access"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <TextBlock Text="Data retention (days):"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0" />
                                        <TextBox x:Name="RetentionTextBox"
                                                 Width="80"
                                                 Height="35"
                                                 FontSize="14"
                                                 Text="90" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                                        Visibility="Collapsed">
                                <TextBlock Text="Advanced Settings"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,20" />
                                <StackPanel>
                                    <CheckBox x:Name="DebugModeCheckBox"
                                              Content="Enable debug mode"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="VerboseLoggingCheckBox"
                                              Content="Enable verbose logging"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <CheckBox x:Name="ExperimentalFeaturesCheckBox"
                                              Content="Enable experimental features"
                                              FontSize="16"
                                              Margin="0,0,0,15" />
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <TextBlock Text="Log level:"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0" />
                                        <ComboBox x:Name="LogLevelComboBox"
                                                  Width="150"
                                                  Height="35"
                                                  FontSize="14">
                                            <ComboBoxItem Content="Error" />
                                            <ComboBoxItem Content="Warning" />
                                            <ComboBoxItem Content="Info" IsSelected="True" />
                                            <ComboBoxItem Content="Debug" />
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="4"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                    </TextBlock>
                    <TextBlock Text=""
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,10,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
