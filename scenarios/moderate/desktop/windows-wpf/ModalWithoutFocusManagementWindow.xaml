        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="800" Width="700"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Main Content Card -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="30" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Settings Modal"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,16" />
                    <!-- Description -->
                    <TextBlock Text="Configure your application settings using the modal below."
                               FontSize="16" 
                               Foreground="#666666"
                               Margin="0,0,0,30" />
                    <!-- Open Modal Button -->
                    <Button x:Name="OpenModalButton"
                            Content="Open Settings Modal"
                            Height="50"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#007BFF"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            Click="OnOpenModalClicked"
                            Margin="0,0,0,20" />
                    <!-- Description -->
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                        <LineBreak />
                    </TextBlock>
                </StackPanel>
            </Border>
            <!-- Modal Overlay -->
            <Border x:Name="ModalOverlay"
                    Background="#80000000"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-20"
                    Panel.ZIndex="1000">
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="30"
                        MaxWidth="500"
                        MaxHeight="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource DropShadowEffect}">
                    <StackPanel>
                        <!-- Modal Header -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="SpaceBetween"
                                    Margin="0,0,0,20">
                            <TextBlock Text="Settings"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#333333" />
                            <Button x:Name="CloseModalButton"
                                    Content="×"
                                    Width="30"
                                    Height="30"
                                    FontSize="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#666666"
                                    Click="OnCloseModalClicked"
                                    HorizontalAlignment="Right" />
                        </StackPanel>
                        <!-- Settings Form -->
                        <StackPanel>
                            <!-- Theme Setting -->
                            <StackPanel Margin="0,0,0,20">
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5" />
                                <ComboBox x:Name="ThemeComboBox"
                                          Height="40"
                                          FontSize="16"
                                          BorderBrush="#DDDDDD"
                                          BorderThickness="2"
                                          VerticalContentAlignment="Center"
                                          Padding="12,0">
                                    <ComboBoxItem Content="Light" IsSelected="True" />
                                    <ComboBoxItem Content="Dark" />
                                    <ComboBoxItem Content="Auto" />
                                </ComboBox>
                            </StackPanel>
                            <!-- Language Setting -->
                            <StackPanel Margin="0,0,0,20">
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5" />
                                <ComboBox x:Name="LanguageComboBox"
                                          Height="40"
                                          FontSize="16"
                                          BorderBrush="#DDDDDD"
                                          BorderThickness="2"
                                          VerticalContentAlignment="Center"
                                          Padding="12,0">
                                    <ComboBoxItem Content="English" IsSelected="True" />
                                    <ComboBoxItem Content="Spanish" />
                                    <ComboBoxItem Content="French" />
                                </ComboBox>
                            </StackPanel>
                            <!-- Notifications Setting -->
                            <StackPanel Margin="0,0,0,30">
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5" />
                                <ComboBox x:Name="NotificationsComboBox"
                                          Height="40"
                                          FontSize="16"
                                          BorderBrush="#DDDDDD"
                                          BorderThickness="2"
                                          VerticalContentAlignment="Center"
                                          Padding="12,0">
                                    <ComboBoxItem Content="All" IsSelected="True" />
                                    <ComboBoxItem Content="Important Only" />
                                    <ComboBoxItem Content="None" />
                                </ComboBox>
                            </StackPanel>
                            <!-- Modal Actions -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Margin="0,20,0,0">
                                <Button x:Name="CancelButton"
                                        Content="Cancel"
                                        Height="40"
                                        FontSize="16"
                                        Background="#6C757D"
                                        Foreground="White"
                                        BorderThickness="0"
                                        CornerRadius="4"
                                        Padding="20,0"
                                        Margin="0,0,10,0"
                                        Click="OnCancelClicked" />
                                <Button x:Name="SaveButton"
                                        Content="Save Settings"
                                        Height="40"
                                        FontSize="16"
                                        Background="#007BFF"
                                        Foreground="White"
                                        BorderThickness="0"
                                        CornerRadius="4"
                                        Padding="20,0"
                                        Click="OnSaveClicked" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>
            <Border Background="#E9ECEF" 
                    CornerRadius="4" 
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <Run Text="• Escape key not handled: Modal doesn't close when Escape is pressed" />
                    </TextBlock>
                    <TextBlock Text="How to Fix:"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,10,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• Add AutomationProperties.AutomationId and AutomationProperties.Name to modal" />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <Run Text="• Handle Escape key to close modal" />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    <!-- Resources -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10" />
    </Window.Resources>
</Window>
