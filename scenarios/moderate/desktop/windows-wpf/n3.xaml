        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="600"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Main Content Card -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="30" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login Form"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,16" />
                    <!-- Description -->
                    <TextBlock Text="Please enter your credentials to access your account."
                               FontSize="16" 
                               Foreground="#666666"
                               Margin="0,0,0,30" />
                    <!-- Login Form -->
                    <StackPanel Margin="0,0,0,30">
                        <!-- Username Field -->
                        <StackPanel Margin="0,0,0,20">
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,5" />
                            <TextBox x:Name="UsernameInput"
                                     Height="40"
                                     Padding="12"
                                     FontSize="16"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="2"
                                     VerticalContentAlignment="Center"
                                     TextChanged="OnUsernameChanged"
                                     KeyDown="OnKeyDown" />
                            <TextBlock x:Name="UsernameError"
                                       Text=""
                                       Foreground="#DC3545"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed" />
                        </StackPanel>
                        <!-- Password Field -->
                        <StackPanel Margin="0,0,0,20">
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,5" />
                            <PasswordBox x:Name="PasswordInput"
                                         Height="40"
                                         Padding="12"
                                         FontSize="16"
                                         BorderBrush="#DDDDDD"
                                         BorderThickness="2"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="OnPasswordChanged"
                                         KeyDown="OnKeyDown" />
                            <TextBlock x:Name="PasswordError"
                                       Text=""
                                       Foreground="#DC3545"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed" />
                        </StackPanel>
                        <!-- Generic Error Message - NOT ASSOCIATED WITH SPECIFIC FIELDS -->
                        <Border x:Name="GenericErrorPanel"
                                Background="#F8D7DA"
                                BorderBrush="#F5C6CB"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <TextBlock x:Name="GenericErrorMessage"
                                       Text="Please fill in all required fields."
                                       Foreground="#DC3545"
                                       FontSize="14"
                                       FontWeight="Bold" />
                        </Border>
                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                                Content="Login"
                                Height="50"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="#007BFF"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                Click="OnLoginClicked"
                                Margin="0,10,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="#E9ECEF" 
                    CornerRadius="4" 
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        <LineBreak />
                        <LineBreak />
                        <Run Text="• Generic error: Generic error message doesn't specify which fields have issues" />
                        <LineBreak />
                    </TextBlock>
                    <TextBlock Text=""
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,10,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• Add AutomationProperties.HelpedBy to link error messages to fields" />
                        <LineBreak />
                        <Run Text="• Add AutomationProperties.IsRequiredForForm to indicate required fields" />
                        <LineBreak />
                        <Run Text="• Use specific error messages for each field" />
                        <LineBreak />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    <!-- Resources -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10" />
    </Window.Resources>
</Window>
