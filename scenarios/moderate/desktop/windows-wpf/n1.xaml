        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="800" Width="700"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Main Content Card -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="30" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Frequently Asked Questions"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,16" />
                    <!-- Description -->
                    <TextBlock Text="Click on questions to expand and view answers."
                               FontSize="16" 
                               Foreground="#666666"
                               Margin="0,0,0,30" />
                    <!-- FAQ Accordion -->
                    <StackPanel>
                        <!-- FAQ Item 1 -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E9ECEF" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <Button x:Name="Question1Button"
                                        Height="60"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        HorizontalContentAlignment="Left"
                                        Padding="20,0"
                                        Click="OnQuestion1Clicked">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <Grid>
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                               VerticalAlignment="Center"
                                                               Padding="{TemplateBinding Padding}" />
                                                    <TextBlock Text="▼"
                                                               FontSize="12"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,20,0" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border x:Name="Answer1Panel"
                                        Background="White"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="0,1,0,0"
                                        Visibility="Collapsed">
                                    <TextBlock TextWrapping="Wrap"
                                               Padding="20"
                                               FontSize="14"
                                               Foreground="#555555"
                                               LineHeight="24">
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                        <!-- FAQ Item 2 -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E9ECEF" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <Button x:Name="Question2Button"
                                        Height="60"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        HorizontalContentAlignment="Left"
                                        Padding="20,0"
                                        Click="OnQuestion2Clicked">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <Grid>
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                               VerticalAlignment="Center"
                                                               Padding="{TemplateBinding Padding}" />
                                                    <TextBlock Text="▼"
                                                               FontSize="12"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,20,0" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border x:Name="Answer2Panel"
                                        Background="White"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="0,1,0,0"
                                        Visibility="Collapsed">
                                    <TextBlock TextWrapping="Wrap"
                                               Padding="20"
                                               FontSize="14"
                                               Foreground="#555555"
                                               LineHeight="24">
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                        <!-- FAQ Item 3 -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E9ECEF" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <Button x:Name="Question3Button"
                                        Content="What are the WCAG guidelines?"
                                        Height="60"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        HorizontalContentAlignment="Left"
                                        Padding="20,0"
                                        Click="OnQuestion3Clicked">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <Grid>
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                               VerticalAlignment="Center"
                                                               Padding="{TemplateBinding Padding}" />
                                                    <TextBlock Text="▼"
                                                               FontSize="12"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,20,0" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border x:Name="Answer3Panel"
                                        Background="White"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="0,1,0,0"
                                        Visibility="Collapsed">
                                    <TextBlock TextWrapping="Wrap"
                                               Padding="20"
                                               FontSize="14"
                                               Foreground="#555555"
                                               LineHeight="24">
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                        <!-- FAQ Item 4 -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E9ECEF" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <Button x:Name="Question4Button"
                                        Height="60"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        HorizontalContentAlignment="Left"
                                        Padding="20,0"
                                        Click="OnQuestion4Clicked">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <Grid>
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                               VerticalAlignment="Center"
                                                               Padding="{TemplateBinding Padding}" />
                                                    <TextBlock Text="▼"
                                                               FontSize="12"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,20,0" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border x:Name="Answer4Panel"
                                        Background="White"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="0,1,0,0"
                                        Visibility="Collapsed">
                                    <TextBlock TextWrapping="Wrap"
                                               Padding="20"
                                               FontSize="14"
                                               Foreground="#555555"
                                               LineHeight="24">
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="#E9ECEF" 
                    CornerRadius="4" 
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                    </TextBlock>
                    <TextBlock Text=""
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,10,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• Add AutomationProperties.AutomationId and AutomationProperties.Name to buttons" />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                        <LineBreak />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    <!-- Resources -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10" />
    </Window.Resources>
</Window>
